<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_prakruti_grn_store_issue_wizard" model="ir.ui.view">
            <field name="name">GRN Allocation</field>
            <field name="model">prakruti.grn_store_issue_wizard</field>
            <field name="arch" type="xml">
                <form string="GRN Allocation">
                    <sheet>
                        <group>
                            <field name="product_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                            <field name="approved_quantity"/>
                            <field name="store_qty"/>
                            <field name="issue_line_id" invisible = "1"/>
                            <field name="issue_id" invisible = "1"/>
                        </group>
                         <notebook colspan="2"> 
                            <page string="GRN Details">
                            <field name='main_id'>
                                <tree string="GRN Line" editable='bottom' >
                                    <field name='grn_id' domain="[('product_id','=',parent.product_id),('order_line.available_qty','&gt;',0)]" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" on_change="on_change_grn_id(grn_id,product_id)"/>
                                    <field name='received_qty' />
                                    <field name='available_qty' />
                                    <field name='packing_style'/>
                                    <field name='packing_per_qty'/>
                                    <field name='extra_issued_packing' />
                                    <field name='issued_qty' sum = "Total Issued Qty"/>
                                    <field name='grn_no' invisible = "1"/>
                                </tree>
                              </field>
                          </page>
                        </notebook>
                         <footer>
                            <button name="action_approve" string="Update" colspan="1" type="object" class="oe_highlight"  />
                            or
                            <button string="Cancel" class="oe_link" special="cancel" />    
                        </footer>
                    </sheet> 
                </form>
            </field>
        </record>       
    </data>
</openerp>    
