<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_change_dispatch_qty_wizard" model="ir.ui.view">
            <field name="name">Batch Allocation</field>
            <field name="model">batch.wise_allocation</field>
            <field name="arch" type="xml">
                <form string="Batch Allocation">
                    <sheet>
                        <group>
                            <field name="product_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                            <field name="uom_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                            <field name="dispatched_qty"/>
                            <field name="store_qty"/>
                            <field name="dispatch_line_id" invisible = "1"/>
                        </group>
                         <notebook colspan="2"> 
                            <page string="Batch Details">
                            <field name='main_id'>
                                <tree string="Prakruti Dispatch" editable='bottom' >
                                    <field name='batch_id' options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" domain="[('subplant_id.subplant_id','=',parent.product_id),('batch_allocated_by','!=','free')]" on_change="on_change_batch(batch_id)"/>
                                    <field name='batch_size' readonly ="1"/>
                                    <field name='batch_qty' readonly ="1"/>
                                    <field name='available_qty' readonly ="1"/>
                                    <field name='dispatch_qty'/>
                                    <field name='packing_details'/>
                                    <field name='batch_allocation_line_id' invisible ="1"/>
                                    <field name='batch_name' invisible ="1"/>
                                </tree>
                              </field>
                          </page>
                        </notebook>
                         <footer>
                            <button name="action_approve" string="Approve" colspan="1" type="object" class="oe_highlight"  />
                            or
                            <button string="Cancel" class="oe_link" special="cancel" />    
                        </footer>
                    </sheet> 
                </form>
            </field>
        </record>       
    </data>
</openerp>    
