<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_prakruti_tablet_wizard" model="ir.ui.view">
            <field name="name">Tablet Wizard</field>
            <field name="model">prakruti.tablet_wizard</field>
            <field name="arch" type="xml">
                <form string="Grid Allocation">
                    <sheet>
                        <group>
                            <field name="batch_no" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                            <field name="subplant_id"/>
                            <field name="tablet_bom_id" invisible="True"/>
                        </group>
                        <notebook colspan="2"> 
                            <page string="Tablet Details">
                                <field name='tablet_bom_wizard_line'>
                                    <tree string="Tablet Line" editable='bottom' >
                                        <field name='product_id' on_change="onchange_product_id(product_id)" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" />
                                        <field name='description' />
                                        <field name='uom_id' options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" />
                                        <field name='ar_no' options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" domain="[ ('product_id','=',product_id)]"/>
                                        <field name='grn_no' options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" invisible="1"/>
                                        <field name='grn_list' />
                                        <field name='std_wgt'/>
                                        <field name='composition'/>
                                        <field name='material_weight'/>
                                        <field name='actual_weight' />
                                        <field name='extra_qty' />
                                        <field name='issued_weight' readonly="True" />
                                        <field name='weight_return' />
                                        <field name='extra_issued_qty' readonly="True"/>
                                        <field name='weighed_by' options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                                        <field name='checked_by' options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <footer>
                            <button name="action_approve" string="Update" colspan="1" type="object" class="oe_highlight"  />
                            or
                            <button string="Cancel" class="oe_link" special="cancel" />    
                        </footer>
                    </sheet> 
                </form>
            </field>
        </record>       
    </data>
</openerp>    
