<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <!--     Inherited View for Company to add GST-->
        <record model="ir.ui.view" id="prakruti_company_form_view">
            <field name="name">Company Information</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tin']" position='after'>
                    <field name='gstin' placeholder='GSTIN'/>
                     <field name='lut_no' placeholder='LUT NO'/>
                     <field name='lut_issue_date' placeholder='LUT Issue Date'/>
                     <field name='lut_expiry_date' placeholder='LUT Expiry Date'/>
                </xpath>
            </field>
        </record>
        
        <!--     Inherited Tree View of Country to add State Code-->
        <record model="ir.ui.view" id="prakruti_country_state_tree_view">
            <field name="name">Country State</field>
            <field name="model">res.country.state</field>
            <field name="inherit_id" ref="base.view_country_state_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='country_id']" position='after'>
                    <field name='state_code'/>
                </xpath>
            </field>
        </record>
        
        <!--     Inherited Form View of Country to add State Code-->
        <record model="ir.ui.view" id="prakruti_country_state_form_view">
            <field name="name">Country State</field>
            <field name="model">res.country.state</field>
            <field name="inherit_id" ref="base.view_country_state_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='country_id']" position='after'>
                    <field name='state_code'/>
                </xpath>
            </field>
        </record>
        
        <!--     Inherited View of Contact Master-->
        <record model="ir.ui.view" id="inheritedform_contact_view">
            <field name="name">inherited form contact</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='website']" position='after'>
                    <field name='rating' widget= 'priority' />
                    <field name='type_of_address'/>
                    <field name='trade_licence' invisible="True"/>
                    <field name='vat_no' />
                    <field name='cst_no'/>
                    <field name='pan_no'/>
                    <field name='tin_no'/>
                    <field name ='gst'/>
                    <field name='credit_limit' />
                    <field name='credit_days' invisible="True"/>
                </xpath>
                
                <xpath expr="//field[@name='category_id']" position='after'>
                    <field name='excise_details'/>
                </xpath>
            </field>
        </record>
         
        <!--     Action View of Contact Master-->
        <menuitem 
            name="Corporate" 
            id="prakruti_specification_menu" 
            sequence="1" 
            web_icon="prakruti,static/src/img/icons/CORPORATE.png"
            />
        <menuitem 
            id="prakruti_specification_sub_menu" 
            name="CRM"  
            parent="prakruti_specification_menu" 
            sequence="1" 
            />
        <menuitem 
            action="mail.action_contacts" 
            id="prakruti_contact_menu" 
            name="Contact Book" 
            parent="prakruti.prakruti_specification_sub_menu" 
            sequence="1" groups="prakruti.group_prakruti_contact_create,prakruti.group_prakruti_contact_edit,prakruti.group_prakruti_contact_read_only,prakruti.group_prakruti_contact_delete" 
            />
    </data>
</openerp>
