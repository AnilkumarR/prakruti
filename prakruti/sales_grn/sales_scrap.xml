<?xml version="1.0" encoding="utf-8"?>
<openerp>
 <data>
        
        <record model="ir.ui.view" id="view_prakruti_prakruti_sales_scrap_search">
            <field name="name">prakruti.sales_scrap.search</field>
            <field name="model">prakruti.sales_scrap</field>
            <field name="arch" type="xml">
                <search string="Product Wise Search">
                    <field name="product_id"/>
                    <field name= "order_date"/>
                    <field name= "state"/>
                </search>
            </field>
        </record>
     <record model="ir.ui.view" id="view_prakruti_sales_scrap_pivot">
            <field name="name">prakruti.sales_scrap.pivot</field>
            <field name="model">prakruti.sales_scrap</field>
            <field name="arch" type="xml">
                <pivot string="Scrap" display_quantity="True">
                    <field name="grn_no" type="row"/>
                    <field name="grn_date"/>
                </pivot>
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_prakruti_prakruti_sales_scrap_form">
            <field name="name">Scrap</field>
            <field name="model">prakruti.sales_scrap</field>
            <field name="arch" type="xml">
                <form string="Scrap" create= "false">
                    
                        <header>
                            <field name= "state" widget='statusbar'/>
                        </header>
                        <group name = 'scrap_form' string = 'Scrap'/>
                        <group colspan="4" col="4">
                            <field name= "coming_from" readonly= "True"/>
                            <field name='inward_no' attrs="{'invisible':[('coming_from','not in',('production'))]}"/>
                            <field name= "grn_no" attrs="{'invisible':[('coming_from','in',('production'))]}"/>
                            <field name= "grn_date" attrs="{'invisible':[('coming_from','in',('production'))]}"/>
                            <field name= "order_date" attrs="{'invisible':[('coming_from','in',('production'))]}"/>
                            <field name= "order_no" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" attrs="{'invisible':[('coming_from','not in',('sales'))]}"/>
                            <field name= "po_no" attrs="{'invisible':[('coming_from','not in',('purchase'))]}"/>
                            <field name= "company_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" invisible= "True"/>
                        </group>                        
                        <notebook>
                            <page string='Product Details'>
                                <field name='scrap_line' widget= 'one2many_list' >
                                    <tree editable='bottom' create= "false">
                                        <field name= "product_id" readonly= "True"/>
                                        <field name= "uom_id" readonly= "True"/>
                                        <field name= "description" readonly= "True"/>
                                        <field name= "quantity" readonly= "True"/>
                                        <field name= "remarks" readonly= "True"/>
                                    </tree>
                                </field>
                            </page>
                            <page string='Other details'>
                                <group>
                                    <field name= "remarks"/> 
                                    <field name='terms' readonly="True"/> 
                                    <field name='reference_no' readonly="True"/> 
                                    <field name='reference_date' readonly="True"/>
                                    <field name='revision_no' readonly="True"/>

                                </group>
                            </page> 
                  </notebook>
                  
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_prakruti_prakruti_sales_scrap_tree">
            <field name="name">Scrap</field>
            <field name="model">prakruti.sales_scrap</field>
            <field name="arch" type="xml">
                <tree string="Scrap Information" create= "false">
                    <field name= "order_date"/>
                    <field name= "state"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="prakruti_prakruti_sales_scrap_action">
            <field name="name">Scrap</field>
            <field name="res_model">prakruti.sales_scrap</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot</field>
        </record>
        <menuitem id="prakruti_scrap_sub_menu" name="Scrap" parent="prakruti_stores_main_menu" sequence="7"/>
        <menuitem name="Scrap Note" id="prakruti_prakruti_sales_scrap_sub_menu_1"
             action="prakruti_prakruti_sales_scrap_action"
             parent="prakruti.prakruti_scrap_sub_menu" sequence="1" groups="prakruti.group_module_prakruti_sales_scrap_read_only,prakruti.group_module_prakruti_sales_scrap_edit,prakruti.group_module_prakruti_sales_scrap_create,prakruti.group_module_prakruti_sales_scrap_delete"/>
    </data>
</openerp>