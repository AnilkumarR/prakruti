<?xml version="1.0" encoding="utf-8"?>
<openerp>
 <data>
            <!--  Search view for GRN QC HA      -->
        <record model="ir.ui.view" id="view_prakruti_sales_return_grn_ha_search">
            <field name="name">prakruti.sales_return_grn_qc_ha.search</field>
            <field name="model">prakruti.sales_return_grn_qc_ha</field>
            <field name="arch" type="xml">
                <search string="Product Wise Search">
                    <field name="product_id"/>
                    <field name= "grn_no"/>
                    <field name= "order_no"/>
                    <field name= "customer_id"/>
                    <field name= "state"/>
                </search>
            </field>
        </record>
        
            <!--  Tree view for GRN QC HA      -->
        <record model="ir.ui.view" id="view_prakruti_sales_return_grn_ha_tree">
            <field name="name">GRN QC HA</field>
            <field name="model">prakruti.sales_return_grn_qc_ha</field>
            <field name="arch" type="xml">
                <tree string="QC HA" create= "false">
                    <field name= "qc_date"/>
                    <field name= "grn_no"/>
                    <field name= "grn_date"/>
                    <field name= "order_no"/>
                    <field name= "order_date"/>
                    <field name= "customer_id"/>  
                    <field name='checked_id'  />
                    <field name= "state"/>
                </tree>
            </field>
        </record>
            <!--  FORM view for GRN QC HA      -->
        <record model="ir.ui.view" id="view_prakruti_sales_return_grn_ha_form">
            <field name="name">GRN QC HA</field>
            <field name="model">prakruti.sales_return_grn_qc_ha</field>
            <field name="arch" type="xml">
                <form string="GRN QC HA" create= "false">
                    <header position="inside">
                        <button name="ha_to_grn" string="Done" type="object" attrs="{'invisible':[('state','in',('done'))]}"/>
                        <field name ="state" widget="statusbar"/>
                    </header>
                    <group name = 'good_received_note_ha' string = 'QC HA'/>
                    <group colspan="4" col="4">
                        <field name= "qc_date"/>
                        <field name= "grn_no"/>
                        <field name= "grn_date"/>
                        <field name= "order_no"/>
                        <field name= "order_date" readonly="True"/>
                        <field name= "customer_id"/>
                        <field name= "company_id"/> 
                        <field name='checked_id' options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" />
                        <field name='dispatch_id' options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" invisible="True" />
                        <field name='order_id'  options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" invisible="True"/>
                        <field name='requested_id'  options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" invisible="True"/>
                        <field name='quotation_id'  options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" invisible="True"/>
                    </group>
                    <notebook>
                        <page string='Product Details'>
                            <field name='grn_qc_line' widget= 'one2many_list' />
                        </page>
                        <page string='Other details'>
                            <group colspan="2" cols="6">
                                <field name= "remarks"/>
                                <field name='terms' readonly="True"/> 
                                <field name='reference_no' readonly="True"/> 
                                <field name='reference_date' readonly="True"/>
                                <field name='revision_no' readonly="True"/>
                            </group>
                        </page> 
                    </notebook>
                </form>
            </field>
        </record>
        
        
    <!--  Tree view for GRN QC HA Line     -->
     <record model="ir.ui.view" id="view_prakruti_sales_return_grn_qc_ha_line_tree">
         <field name="name">prakruti.sales_return_grn_qc_ha_line.tree</field>
         <field name="model">prakruti.sales_return_grn_qc_ha_line</field>
         <field name="arch" type="xml">
                 <tree editable='bottom' create= "false">
                    <field name= "product_id" />
                    <field name= "uom_id" />
                    <field name='specification_id' options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" domain="['&amp;',('product_id','=',product_id),'|',('specification_sale_status','=',True),('common_specification','=',True)]"/>
                    <field name='ar_no' options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"  domain="[('specification_id','=',specification_id)]"/>
                    <field name= "batch_no" />
                    <field name= "description" />
                    <field name= "quantity" />
                    <field name= "accepted_qty" />
                    <field name= "rejected_qty" />
                    <field name= "status" />
                    <field name= "state" invisible="True"/>
                    <field name= "remarks"/>
                </tree>
         </field>
     </record>
            <!--  Pivot for GRN QC HA Line     -->
     <record model="ir.ui.view" id="view_prakruti_sales_return_grn_qc_ha_pivot">
            <field name="name">prakruti.sales_return_grn_qc_ha.pivot</field>
            <field name="model">prakruti.sales_return_grn_qc_ha</field>
            <field name="arch" type="xml">
                <pivot string=" GRN QC HA " display_quantity="True">
                    <field name="checked_id" type="row"/>
                    <field name="customer_id"/>
                    <field name ="state" />
                </pivot>
            </field>
        </record>
        
            <!--  Action for GRN QC HA Line     -->
        <record model="ir.actions.act_window" id="prakruti_sales_return_grn_ha_action">
            <field name="name">GRN QC HA</field>
            <field name="res_model">prakruti.sales_return_grn_qc_ha</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot</field>
        </record>
        
        <menuitem sequence="4" 
                  name="Sales Return GRN Quality Control HA" 
                  id="prakruti_sales_return_grn_qc_ha_sub_menu_1"
                  action="prakruti_sales_return_grn_ha_action"
                  parent="prakruti.prakruti_quality_control_parent_menu_for_stores_qc1"  groups="prakruti.group_module_prakruti_sales_return_grn_qc_ha_read_only,prakruti.group_module_prakruti_sales_return_grn_qc_ha_edit,prakruti.group_module_prakruti_sales_return_grn_qc_ha_create,prakruti.group_module_prakruti_sales_return_grn_qc_ha_delete"/>
    </data>
</openerp>