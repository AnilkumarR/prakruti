<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        
        

        
        <record id="email_template_prakruti_production_planning" model="email.template">
            <field name="name">Planning Notifications</field>
            <field name="email_from">noreply@prakruti.com</field>          
            <field name="email_to">induja.m@netsoftgroup.in,data@prakruti.com</field>
            <field name="model_id" ref="model_prakruti_production_planning_notifications"/>
            <field name="auto_delete" eval="True"/>
            <field name="subject">
                <![CDATA[ 
                  Notifications From Production Planning
                 ]]></field>
            <field name="body_html">
                <![CDATA[
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">                    
                        <p>Dear Sir/Mam,</p>
                        <p><b>Details:</b></p>
                    </div>
                    <div>
                            <table  border=1>
                                <tr>
                                    <td><b>Finished Product</b></td>
                                    <td><b>Scheduled Date</b></td>
                                    <td><b>Scheduled Qty</b></td>
                                    <td><b>Raw Material</b></td>
                                    <td><b>Store Qty</b></td>
                                </tr>  
                                % for line in object.notification_slip_line:
                                <tr>
                                    <td>${line.product_name}</td>
                                    <td>${line.scheduled_date}</td> 
                                    <td>${line.scheduled_qty}</td> 
                                    <td>${line.raw_material}</td> 
                                    <td>${line.store_qty}</td>  
                                </tr>
                                %endfor
                                
                            </table>
                    </div>
                    <br><br>
                    <p> Regards, </p>
                    <p> Prakruti ERP Application </p>
                ]]></field>
        </record>
    </data>
</openerp>    
