<?xml version="1.0" ?>
<openerp>
    <data>
        
        
        <record id="email_prakruti_sales_inquiry" model="email.template">
            <field name="name">Sales Inquiry</field>
            <field name="email_from">${object.requested_id.login}</field>          
            <field name="email_to">${object.requested_id.login}</field>
            <field name="model_id" ref="model_prakruti_sales_inquiry"/>
            <field name="auto_delete" eval="True"/> 
            <field name="subject">
                <![CDATA[ 
                    Sales Inquiry No ${object.inquiry_no} Raised and sent to Sales Quotation
                 ]]></field>
            <field name="body_html">
                <![CDATA[
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">                    
                        <p>Dear Team,</p>                  
                        <p><b>Inquiry Date:</b> ${object.inquiry_date},</p>
                        <p>The SI No. ${object.inquiry_no}  is in Quotation</p>
                        <p><b>Product Details:</b></p>
                            <table  border=1>
                                    <tr>
                                        <td><b>Item </b></td>
                                        <td><b>Description</b></td>
                                        <td><b> Specification</b></td>
                                        <td><b> Qty</b></td>
                                        <td><b> Remarks</b></td>
                                    </tr>
                                    %  for line in object.grid_id:
                                    <tr>
                                        <td>${line.product_id.name}</td>
                                        <td>${line.description}</td>           
                                        <td>${line.specification_id.specification_name}</td>        
                                        <td  align="right">${'{:.3f}'.format(line.quantity)}</td> 
                                        <td>${line.remarks}</td>     
                                    </tr>
                                    %endfor
                                </table>
                                <p><b>Remarks:</b> ${object.remarks}</p>
                    </div>
                    <br><br>
                    <p> Regards, </p>
                    <p> Prakruti ERP Application </p>
                    <p>${object.requested_id.name} </p>
                ]]></field>
        </record>
        
        

        
        
        
        
        
    </data>
</openerp>
