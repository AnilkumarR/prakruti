<?xml version="1.0" ?>
<openerp>
    <data>
        
        
        <record id="email_prakruti_dispatch_qc_validate" model="email.template">
            <field name="name">Dispatch QC</field>
            <field name="email_from">${object.dispatch_id.login}</field>          
            <field name="email_to">${object.quality_incharge.login},${object.dispatch_id.login}</field>
            <field name="model_id" ref="model_prakruti_quality_check"/>
            <field name="auto_delete" eval="True"/> 
            <field name="subject">
                <![CDATA[ 
                    QC Completed Against DISP NO ${object.dispatch_no}-Dispatch QC Validated
                 ]]></field>
            <field name="body_html">
                <![CDATA[
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">                    
                        <p>Dear Team,</p>          
                        <p><b>Dispatch QC Date:</b> ${object.dispatch_date},</p>
                        <p>The DIS No. ${object.dispatch_no}  is in Dispatch QC Validated</p>
                        <p><b>Product Details:</b></p>
                            <table  border=1>
                                    <tr>
                                        <td><b>Item </b></td>
                                        <td><b>Description</b></td>
                                        <td><b> Specification</b></td>
                                        <td><b> Ordered Qty</b></td>
                                        <td><b> Dispatched Qty</b></td>
                                        <td><b> Accepted Qty</b></td>
                                        <td><b> Rejected Qty</b></td>
                                        <td><b> Status</b></td>
                                    </tr>
                                    %  for line in object.check_line:
                                    <tr>
                                        <td>${line.product_id.name}</td>
                                        <td>${line.description}</td>        
                                        <td>${line.specification_id.specification_name}</td>       
                                        <td  align="right">${'{:.3f}'.format(line.ordered_qty)}</td>  
                                        <td  align="right">${'{:.3f}'.format(line.dispatched_qty)}</td> 
                                        <td  align="right">${'{:.3f}'.format(line.accepted_qty)}</td>        
                                        <td  align="right">${'{:.3f}'.format(line.rejected_qty)}</td> 
                                        <td>${line.status}</td>       
                                    </tr>
                                    %endfor
                                </table>
                    </div>
                    <br><br>
                    <p> Regards, </p>
                    <p> Prakruti ERP Application </p>
                    <p> ${object.dispatch_id.name},</p>
                ]]></field>
        </record>
        
 

