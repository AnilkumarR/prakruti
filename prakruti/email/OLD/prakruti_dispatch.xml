<?xml version="1.0" ?>
<openerp>
    <data>
        
        
        <record id="email_prakruti_dispatch" model="email.template">
            <field name="name">Sales Dispatch</field>
            <field name="email_from">${object.order_id.login}</field>          
            <field name="email_to">${object.dispatch_id.login},${object.order_id.login}</field>
            <field name="model_id" ref="model_prakruti_dispatch"/>
            <field name="auto_delete" eval="True"/> 
            <field name="subject">
                <![CDATA[ 
                   Dispatch No  ${object.dispatch_no} raised order no ${object.order_no.order_no} and sent for Dispatch QC
                 ]]></field>
            <field name="body_html">
                <![CDATA[
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">                    
                        <p>Dear Team,</p>             
                        <p><b>Dispatch Date:</b> ${object.dispatch_date},</p>
                        <p>The DIS No. ${object.dispatch_no}  is in Dispatch QC</p>
                        <p><b>Product Details:</b></p>
                            <table  border=1>
                                    <tr>
                                        <td><b>Item </b></td>
                                        <td><b>Description</b></td>
                                        <td><b> Specification</b></td>
                                        <td><b> Ordered Qty</b></td>
                                        <td><b> Scheduled Date</b></td>
                                        <td><b> Scheduled Qty</b></td>
                                        <td><b> Dispatched Date</b></td>
                                        <td><b> Packing Style</b></td>
                                        <td><b> Packing Per Qty</b></td>
                                        <td><b> Unit Price</b></td>
                                        <td><b> Total</b></td>
                                        <td><b> Status</b></td>
                                    </tr>
                                    %  for line in object.grid_id:
                                    <tr>
                                        <td>${line.product_id.name}</td>
                                        <td>${line.description}</td>        
                                        <td>${line.specification_id.specification_name}</td>       
                                        <td  align="right">${'{:.3f}'.format(line.ordered_qty)}</td>   
                                        <td>${line.scheduled_date}</td>           
                                        <td  align="right">${'{:.3f}'.format(line.scheduled_qty)}</td> 
                                        <td  align="right">${'{:.3f}'.format(line.dispatched_qty)}</td>
                                        <td  align="right">${'{:.3f}'.format(line.packing_style)}</td>
                                        <td  align="right">${'{:.3f}'.format(line.no_of_packings)}</td>         
                                        <td  align="right">${'{:.3f}'.format(line.unit_price)}</td>  
                                        <td  align="right">${'{:.3f}'.format(line.total)}</td>
                                        <td>${line.status}</td>     
                                    </tr>
                                    %endfor
                                </table>
                            <p><b>Remarks:</b> ${object.remarks}</p>
                    </div>
                    <br><br>
                    <p> Regards, </p>
                    <p> Prakruti ERP Application </p>
                    <p> ${object.order_id.name}</p>
                ]]></field>
        </record>
        
 

        <record id="email_prakruti_dispatch_stock" model="email.template">
            <field name="name">Sales Dispatch Stock</field>
            <field name="email_from">${object.order_id.login}</field>          
            <field name="email_to">${object.dispatch_id.login},${object.order_id.login}</field>
            <field name="model_id" ref="model_prakruti_dispatch"/>
            <field name="auto_delete" eval="True"/> 
            <field name="subject">
                <![CDATA[ 
                 Dispatch No  ${object.dispatch_no} Approved against order no ${object.order_no.order_no} Stock Updated
                 ]]></field>
            <field name="body_html">
                <![CDATA[
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">                    
                        <p>Dear Team,</p>
                        <p>The stock has been updated with DIS No. ${object.dispatch_no} </p>
                        <p>Status is ${object.state}</p>
                            <table  border=1>
                                    <tr>
                                        <td><b>Item </b></td>
                                        <td><b>Description</b></td>
                                        <td><b> Specification</b></td>
                                        <td><b> Ordered Qty</b></td>
                                        <td><b> Scheduled Date</b></td>
                                        <td><b> Scheduled Qty</b></td>
                                        <td><b> Dispatched Date</b></td>
                                        <td><b> Packing Style</b></td>
                                        <td><b> Packing Per Qty</b></td>
                                        <td><b> Unit Price</b></td>
                                        <td><b> Total</b></td>
                                        <td><b> Status</b></td>
                                    </tr>
                                    %  for line in object.grid_id:
                                    <tr>
                                        <td>${line.product_id.name}</td>
                                        <td>${line.description}</td>        
                                        <td>${line.specification_id.specification_name}</td>       
                                        <td  align="right">${'{:.3f}'.format(line.ordered_qty)}</td>   
                                        <td>${line.scheduled_date}</td>           
                                        <td  align="right">${'{:.3f}'.format(line.scheduled_qty)}</td> 
                                        <td  align="right">${'{:.3f}'.format(line.dispatched_qty)}</td>
                                        <td  align="right">${'{:.3f}'.format(line.packing_style)}</td>
                                        <td  align="right">${'{:.3f}'.format(line.no_of_packings)}</td>         
                                        <td  align="right">${'{:.3f}'.format(line.unit_price)}</td>  
                                        <td  align="right">${'{:.3f}'.format(line.total)}</td>
                                        <td>${line.status}</td>     
                                    </tr>
                                    %endfor
                                </table>
                    </div>
                    <br><br>
                    <p> Regards, </p>
                    <p> Prakruti ERP Application </p>
                    <p> ${object.order_id.name} </p>
                ]]></field>
        </record>
        
 

        
        
        
        
        
    </data>
</openerp>
