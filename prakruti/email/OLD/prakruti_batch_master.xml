<?xml version="1.0" ?>
<openerp>
    <data>
        
        
        <record id="email_prakruti_batch_master" model="email.template">
            <field name="name">Manage Batch</field>
            <field name="email_from">${object.write_uid.login}</field>          
            <field name="email_to">${object.write_uid.login}</field>
            <field name="model_id" ref="model_prakruti_batch_master"/>
            <field name="auto_delete" eval="True"/> 
            <field name="subject">
                <![CDATA[ 
                  Batch No-  ${object.batch_no}
                 ]]></field>
            <field name="body_html">
                <![CDATA[
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">                    
                        <p>Dear Team,</p>                 
                        <p><b>Batch Allocation Date:</b> ${object.batch_allocation_date},</p>
                        <p><b>Batch End Date:</b> ${object.batch_end_date},</p>
                        <p>The Batch No. ${object.batch_no}  </p>
                    </div>
                    <br><br>
                    <p> Regards, </p>
                    <p> Prakruti ERP Application </p>
                    <p> ${object.write_uid.name} </p>
                ]]></field>
        </record>
        
        

        
        
        
        
        
    </data>
</openerp>
