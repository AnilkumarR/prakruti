<?xml version="1.0" ?>
<openerp>
    <data>
        
        
        <record id="email_prakruti_purchase_quotation_analysis" model="email.template">
            <field name="name">Purchase Quotation Analysis</field>
            <field name="email_from">${object.prepared_by.login}</field>          
            <field name="email_to">${object.purchase_manager.login},${object.prepared_by.login}</field>
            <field name="model_id" ref="model_prakruti_purchase_order_quotation_analysis"/>
            <field name="auto_delete" eval="True"/> 
            <field name="subject">
                <![CDATA[ 
                    ${object.qa_no}-Purchase Order
                 ]]></field>
            <field name="body_html">
                <![CDATA[
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">                    
                        <p>Dear Team,</p>           
                        <p><b>Quotation Anlaysis Date:</b> ${object.order_date},</p>
                        <p>The PQA No. ${object.qa_no}  is in Purchase Order</p>
                        <p><b>Product Details:</b></p>
                        <table  border=1>
                                    <tr>
                                        <td><b>Item </b></td>
                                        <td><b>Description</b></td>
                                        <td><b> Req Qty</b></td>
                                        <td><b> Unit Price</b></td>
                                        <td><b> Total </b></td>
                                        <td><b> Scheduled Date</b></td>
                                        <td><b> Discount Amount</b></td>
                                        <td><b>  Tax Amount</b></td>
                                        <td><b>  Sub Total </b></td>
                                    </tr>
                                    %  for line in object.order_line:
                                    <tr>
                                        <td>${line.product_id.name}</td>
                                        <td>${line.description}</td> 
                                        <td  align="right">${'{:.3f}'.format(line.quantity)}</td>  
                                        <td  align="right">${'{:.3f}'.format(line.unit_price)}</td>  
                                        <td  align="right">${'{:.3f}'.format(line.total)}</td>  
                                        <td>${line.scheduled_date}</td> 
                                        <td  align="right">${'{:.3f}'.format(line.discount_value)}</td>  
                                        <td  align="right">${'{:.3f}'.format(line.tax_price)}</td>  
                                        <td  align="right">${'{:.3f}'.format(line.subtotal)}</td>  
                                    </tr>
                                    %endfor
                                </table>
                                <p><b>Remarks:</b> ${object.remarks}</p>
                    </div>
                    <br><br>
                    <p> Regards, </p>
                    <p> Prakruti ERP Application </p>
                    <p> ${object.prepared_by.name} </p>
                ]]></field>
        </record>
             
             
        
    </data>
</openerp>
