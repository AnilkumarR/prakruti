<?xml version="1.0" ?>
<openerp>
    <data>
        
        
        <record id="email_prakruti_return_items" model="email.template">
            <field name="name">To Debit Note</field>
            <field name="email_from">${object.purchase_manager.login}</field>          
            <field name="email_to">${object.stores_incharge.login},${object.purchase_manager.login}</field>
            <field name="model_id" ref="model_prakruti_return_items"/>
            <field name="auto_delete" eval="True"/> 
            <field name="subject">
                <![CDATA[ 
                    ${object.mrn_no}-Debit Note
                 ]]></field>
            <field name="body_html">
                <![CDATA[
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">                    
                        <p>Dear Team,</p>
                        <p><b>MRN Date:</b> ${object.mrn_date},</p>
                        <p>The MRN No. ${object.mrn_no}  is in QC HA</p>
                        <p><b>Product Details:</b></p> 
                            <table  border=1>
                                    <tr>
                                        <td><b>Item </b></td>
                                        <td><b> Description </b></td>
                                        <td><b> Return Qty</b></td>
                                        <td><b> Remarks </b></td>
                                    </tr>
                                    %  for line in object.return_line:
                                    <tr>
                                        <td>${line.product_id.name}</td> 
                                        <td>${line.description}</td>           
                                        <td  align="right">${'{:.3f}'.format(line.return_qty)}</td> 
                                        <td>${line.remarks}</td>           
                                    </tr>
                                    %endfor
                                </table>
                    </div>
                    <br><br>
                    <p> Regards, </p>
                    <p> Prakruti ERP Application </p>
                    <p>  ${object.purchase_manager.name}</p>
                ]]></field>
        </record>
        
        

        
        
        
        
    </data>
</openerp>
