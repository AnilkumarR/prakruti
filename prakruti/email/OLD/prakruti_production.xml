<?xml version="1.0" ?>
<openerp>
    <data>
        
        
        <record id="email_prakruti_production" model="email.template">
            <field name="name">Extraction Production</field>
            <field name="email_from">${object.created_by.login}</field>          
            <field name="email_to">${object.created_by.login}</field>
            <field name="model_id" ref="model_prakruti_production"/>
            <field name="auto_delete" eval="True"/> 
            <field name="subject">
                <![CDATA[ 
                    ${object.batch_id.batch_no}// Batch Allocated
                 ]]></field>
            <field name="body_html">
                <![CDATA[
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">                    
                        <p>Dear ${object.created_by.name},</p>               
                        <p><b>Production Date:</b> ${object.production_date},</p>
                        <p>The batch has been allocated for Extraction Production With Batch No ${object.batch_id.batch_no} </p>
                        <p>Status is Batch Allocated</p>
                    </div>
                    <br><br>
                    <p> Regards, </p>
                    <p> Prakruti ERP Application Admin</p>
                    <p> ${object.created_by.name}</p>
                ]]></field>
        </record>

        
        
        
        
        
    </data>
</openerp>
