<?xml version="1.0" ?>
<openerp>
    <data>
        
        
        <record id="email_prakruti_price_request" model="email.template">
            <field name="name">Purchase Price Request</field>
            <field name="email_from">${object.approved_by.login}</field>          
            <field name="email_to">${object.stores_incharge.login},${object.approved_by.login}</field>
            <field name="model_id" ref="model_prakruti_price_request"/>
            <field name="auto_delete" eval="True"/> 
            <field name="subject">
                <![CDATA[ 
                    ${object.inquiry_no}-Purchase Quotation
                 ]]></field>
            <field name="body_html">
                <![CDATA[
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">                    
                        <p>Dear Team,</p>           
                        <p><b>Request Date:</b> ${object.inquiry_date},</p>
                        <p>The PR No. ${object.inquiry_no}  is in Purchase Quotation</p>
                        <p><b>Product Details:</b></p>
                        <table  border=1>
                                    <tr>
                                        <td><b>Item </b></td>
                                        <td><b>Description</b></td>
                                        <td><b> Req Qty</b></td>
                                        <td><b> Req Date</b></td>
                                        <td><b> Last Purchase Date</b></td>
                                        <td><b> Last Purchase Vendor Name</b></td>
                                        <td><b> Last Purchase Price</b></td>
                                        <td><b> Remarks</b></td>
                                    </tr>
                                    %  for line in object.request_order_line:
                                    <tr>
                                        <td>${line.product_id.name}</td>
                                        <td>${line.description}</td> 
                                        <td  align="right">${'{:.3f}'.format(line.quantity_req)}</td>  
                                        <td>${line.required_date}</td>       
                                        <td>${line.last_purchase_date}</td>         
                                        <td>${line.last_purchase_vendor_id.name}</td>
                                        <td  align="right">${'{:.3f}'.format(line.last_price)}</td> 
                                        <td>${line.remarks}</td>          
                                    </tr>
                                    %endfor
                                </table>
                                <p><b>Remarks:</b> ${object.remarks}</p>
                    </div>
                    <br><br>
                    <p> Regards, </p>
                    <p> Prakruti ERP Application </p>
                    <p> ${object.approved_by.name} </p>
                ]]></field>
        </record>
        
        

        
        
        
        
    </data>
</openerp>
