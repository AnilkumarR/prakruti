<?xml version="1.0" ?>
<openerp>
    <data>
        
        
        <record id="email_prakruti_grn_inspection_details" model="email.template">
            <field name="name">Purchase GRN</field>
            <field name="email_from">${object.stores_incharge.login}</field>          
            <field name="email_to">${object.purchase_manager.login},${object.stores_incharge.login}</field>
            <field name="model_id" ref="model_prakruti_grn_inspection_details"/>
            <field name="auto_delete" eval="True"/> 
            <field name="subject">
                <![CDATA[ 
                    GRN NO ${object.grn_no} Raised Against PO no  ${object.po_no}  and GP No ${object.po_no} and Stock Updated
                 ]]></field>
            <field name="body_html">
                <![CDATA[
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">                    
                        <p>Dear Team,</p>
                        <p><b>GRN Date:</b> ${object.grn_date},</p>
                        <p>Stock Has Been Updated with this GRN No. ${object.grn_no} </p>
                        <p><b>Product Details:</b></p> 
                            <table  border=1>
                                    <tr>
                                        <td><b>Item </b></td>
                                        <td><b>Description</b></td>
                                        <td><b> Qty</b></td>
                                        <td><b> Packing Style</b></td>
                                        <td><b> Received Per Qty</b></td>
                                        <td><b> Extra Packing</b></td>
                                        <td><b> Received Qty</b></td>
                                        <td><b> Accepted Qty</b></td>
                                        <td><b> Rejected Qty</b></td>
                                        <td><b> Status</b></td>
                                    </tr>
                                    %  for line in object.order_line:
                                    <tr>
                                        <td>${line.product_id.name}</td>
                                        <td>${line.description}</td>               
                                        <td  align="right">${'{:.3f}'.format(line.actual_quantity)}</td>         
                                        <td  align="right">${'{:.3f}'.format(line.packing_style)}</td>         
                                        <td  align="right">${'{:.3f}'.format(line.received_per_qty)}</td>         
                                        <td  align="right">${'{:.3f}'.format(line.extra_packing)}</td>         
                                        <td  align="right">${'{:.3f}'.format(line.quantity)}</td>        
                                        <td  align="right">${'{:.3f}'.format(line.accepted_qty)}</td>        
                                        <td  align="right">${'{:.3f}'.format(line.rejected_qty)}</td>
                                        <td>${line.status}</td>            
                                    </tr>
                                    %endfor
                                </table>
                            <p><b>Remarks:</b> ${object.remarks}</p>
                    </div>
                    <br><br>
                    <p> Regards, </p>
                    <p> Prakruti ERP Application </p>
                    <p>  ${object.stores_incharge.name}</p>
                ]]></field>
        </record>
        
