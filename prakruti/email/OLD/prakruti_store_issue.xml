<?xml version="1.0" ?>
<openerp>
    <data>
        
        
        <record id="email_prakruti_store_issue" model="email.template">
            <field name="name">Store Issue</field>
            <field name="email_from">${object.issued_by.login}</field>          
            <field name="email_to">${object.store_incharge.login},${object.plant_incharge.login},${object.production_incharge.login}</field>
            <field name="model_id" ref="model_prakruti_store_issue"/>
            <field name="auto_delete" eval="True"/> 
            <field name="subject">
                <![CDATA[ 
                  Material Issued against Request No  ${object.request_no}
                 ]]></field>
            <field name="body_html">
                <![CDATA[
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">                    
                        <p>Dear Team,</p>     
                        <p><b>Issue Date:</b> ${object.issue_date},</p>
                        <p>Stock Has Been Updated with this Issue No. ${object.issue_no} </p>
                        <p><b>Product Details:</b></p>
                            <table  border=1>
                                    <tr>
                                        <td><b>Item </b></td>
                                        <td><b>Description</b></td>
                                        <td><b> Issued Quantity</b></td>
                                        <td><b> Packing Style</b></td>
                                        <td><b> Packing Per Qty</b></td>
                                        <td><b> Extra Packing Qty</b></td>
                                        <td><b> Approved Qty</b></td>
                                    </tr>
                                    %  for line in object.grid_id:
                                    <tr>
                                        <td>${line.product_id.name}</td>
                                        <td>${line.description}</td>          
                                        <td  align="right">${'{:.3f}'.format(line.issued_quantity)}</td>         
                                        <td  align="right">${'{:.3f}'.format(line.packing_style)}</td>         
                                        <td  align="right">${'{:.3f}'.format(line.packing_per_qty)}</td>         
                                        <td  align="right">${'{:.3f}'.format(line.extra_issued_qty)}</td>         
                                        <td  align="right">${'{:.3f}'.format(line.approved_quantity)}</td>
                                    </tr>
                                    %endfor
                                </table>
                            <p><b>Remarks:</b> ${object.remarks}</p>
                    </div>
                    <br><br>
                    <p> Regards, </p>
                    <p> Prakruti ERP Application </p>
                    <p> ${object.approved_by.name} </p>
                ]]></field>
        </record>

        
        
        
        
        
    </data>
</openerp>
