<?xml version="1.0" ?>
<openerp>
    <data>
        
        
        <record id="email_prakruti_debit_note" model="email.template">
            <field name="name">Debit Note</field>
            <field name="email_from">${object.stores_incharge.login}</field>          
            <field name="email_to">${object.purchase_manager.login},${object.stores_incharge.login}</field>
            <field name="model_id" ref="model_prakruti_debit_note"/>
            <field name="auto_delete" eval="True"/> 
            <field name="subject">
                <![CDATA[ 
                   Debit Note no ${object.debit_note_no} raised and Sent for Higgher Approval
                 ]]></field>
            <field name="body_html">
                <![CDATA[
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">                    
                        <p>Dear Team,</p>
                        <p><b>Debit NOte Date:</b> ${object.debit_date},</p>
                        <p>The Debit NOte No. ${object.debit_note_no}  is in Debit Note HA</p>
                        <p><b>Product Details:</b></p> 
                            <table  border=1>
                                    <tr>
                                        <td><b>Item </b></td>
                                        <td><b> Return Qty</b></td>
                                        <td><b> Unit Price </b></td>
                                        <td><b> Total </b></td>
                                    </tr>
                                    %  for line in object.order_line:
                                    <tr>
                                        <td>${line.product_id.name}</td>           
                                        <td  align="right">${'{:.3f}'.format(line.return_qty)}</td>       
                                        <td  align="right">${'{:.3f}'.format(line.unit_price)}</td>       
                                        <td  align="right">${'{:.3f}'.format(line.total)}</td> 
                                    </tr>
                                    %endfor
                                </table>
                    </div>
                    <br><br>
                    <p> Regards, </p>
                    <p> Prakruti ERP Application </p>
                    <p>  ${object.stores_incharge.name}</p>
                ]]></field>
        </record>
        
        

        
        
        
        
    </data>
</openerp>
