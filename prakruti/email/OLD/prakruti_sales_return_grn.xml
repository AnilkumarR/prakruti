<?xml version="1.0" ?>
<openerp>
    <data>
        
        
        <record id="email_prakruti_sales_return_grn" model="email.template">
            <field name="name">Sales GRN</field>
            <field name="email_from">${object.order_id.login}</field>          
            <field name="email_to">${object.dispatch_id.login},${object.order_id.login}</field>
            <field name="model_id" ref="model_prakruti_sales_return_grn"/>
            <field name="auto_delete" eval="True"/> 
            <field name="subject">
                <![CDATA[ 
                    ${object.grn_no}-GRN QC
                 ]]></field>
            <field name="body_html">
                <![CDATA[
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">                    
                        <p>Dear Team,</p>           
                        <p><b>GRN Date:</b> ${object.grn_date},</p>
                        <p>The GRN No. ${object.grn_no}  is in GRN QC</p>
                        <p><b>Product Details:</b></p>
                        <p>Status is ${object.state}</p>
                            <table  border=1>
                                    <tr>
                                        <td><b>Item </b></td>
                                        <td><b>Description</b></td>
                                        <td><b> Specification</b></td>
                                        <td><b> Batch No</b></td>
                                        <td><b> Qty</b></td>
                                        <td><b> Accepted Qty</b></td>
                                        <td><b> Rejected Qty</b></td>
                                        <td><b> Status</b></td>
                                    </tr>
                                    %  for line in object.grn_line:
                                    <tr>
                                        <td>${line.product_id.name}</td>
                                        <td>${line.description}</td>        
                                        <td>${line.specification_id.specification_name}</td>        
                                        <td>${line.batch_no.batch_no}</td>
                                        <td  align="right">${'{:.3f}'.format(line.quantity)}</td> 
                                        <td  align="right">${'{:.3f}'.format(line.accepted_qty)}</td>
                                        <td  align="right">${'{:.3f}'.format(line.rejected_qty)}</td>
                                        <td>${line.status}</td>     
                                    </tr>
                                    %endfor
                                </table>
                            <p><b>Remarks:</b> ${object.remarks}</p>
                    </div>
                    <br><br>
                    <p> Regards, </p>
                    <p> Prakruti ERP Application </p>
                    <p> ${object.order_id.name} </p>
                ]]></field>
        </record>
        
 

