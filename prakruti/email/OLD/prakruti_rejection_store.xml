<?xml version="1.0" ?>
<openerp>
    <data>
        
        
        <record id="email_prakruti_rejection_store" model="email.template">
            <field name="name">Sales Rejection Scrap</field>
            <field name="email_from">${object.checked_by.login}</field>          
            <field name="email_to">${object.store_incharge.login},${object.checked_by.login}</field>
            <field name="model_id" ref="model_prakruti_material_rejected_store"/>
            <field name="auto_delete" eval="True"/> 
            <field name="subject">
                <![CDATA[ 
                    ${object.grn_no}-Scrap
                 ]]></field>
            <field name="body_html">
                <![CDATA[
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">                    
                        <p>Dear Team,</p>           
                        <p><b>GRN Date:</b> ${object.grn_date},</p>
                        <p>The GRN No. ${object.grn_no}  is in Scrap</p>
                        <p><b>Product Details:</b></p>
                            <table  border=1>
                                    <tr>
                                        <td><b>Item </b></td>
                                        <td><b>Description</b></td>
                                        <td><b> Qty</b></td>
                                        <td><b> Remarks</b></td>
                                    </tr>
                                    %  for line in object.qc_check_line:
                                    <tr>
                                        <td>${line.product_id.name}</td>
                                        <td>${line.description}</td>   
                                        <td  align="right">${'{:.3f}'.format(line.quantity)}</td>
                                        <td>${line.remarks}</td>     
                                    </tr>
                                    %endfor
                                </table>
                            <p><b>Remarks:</b> ${object.remarks}</p>
                    </div>
                    <br><br>
                    <p> Regards, </p>
                    <p> Prakruti ERP Application </p>
                    <p> ${object.checked_by.name} </p>
                ]]></field>
        </record>
        
 

        
    </data>
</openerp>
