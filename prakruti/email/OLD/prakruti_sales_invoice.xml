<?xml version="1.0" ?>
<openerp>
    <data>
        
        
        <record id="email_prakruti_sales_invoice" model="email.template">
            <field name="name">Sales Invoice</field>
            <field name="email_from">${object.return_id.login}</field>          
            <field name="email_to">${object.return_id.login},${object.dispatch_id.login}</field>
            <field name="model_id" ref="model_prakruti_sales_invoice"/>
            <field name="auto_delete" eval="True"/> 
            <field name="subject">
                <![CDATA[ 
                    ${object.invoice_no}-Sales Return
                 ]]></field>
            <field name="body_html">
                <![CDATA[
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">                    
                        <p>Dear Team,</p>            
                        <p><b>Invoice Date:</b> ${object.invoice_date},</p>
                        <p>The INV No. ${object.invoice_no}  is in Sales Return </p>
                        <p><b>Product Details:</b></p>
                            <table  border=1>
                                    <tr>
                                        <td><b>Item </b></td>
                                        <td><b>Description</b></td>
                                        <td><b> Specification</b></td>
                                        <td><b> Packing Style</b></td>
                                        <td><b> Packing Per Qty</b></td>
                                        <td><b> Extra Packing </b></td>
                                        <td><b> Qty</b></td>
                                        <td><b> Unit Price</b></td>
                                        <td><b> Total</b></td>
                                    </tr>
                                    %  for line in object.grid_id:
                                    <tr>
                                        <td>${line.product_id.name}</td>
                                        <td>${line.description}</td>        
                                        <td>${line.specification_id.specification_name}</td>       
                                        <td  align="right">${'{:.3f}'.format(line.packing_style)}</td>  
                                        <td  align="right">${'{:.3f}'.format(line.no_of_packings)}</td>  
                                        <td  align="right">${'{:.3f}'.format(line.extra_packing)}</td> 
                                        <td  align="right">${'{:.3f}'.format(line.quantity)}</td>        
                                        <td  align="right">${'{:.3f}'.format(line.unit_price)}</td>  
                                        <td  align="right">${'{:.3f}'.format(line.total)}</td> 
                                    </tr>
                                    %endfor
                                </table>
                            <p><b>Remarks:</b> ${object.remarks}</p>
                    </div>
                    <br><br>
                    <p> Regards, </p>
                    <p> Prakruti ERP Application </p>
                    <p> ${object.return_id.name}</p>
                ]]></field>
        </record>
        
 

 

        
        
        
        
        
    </data>
</openerp>
