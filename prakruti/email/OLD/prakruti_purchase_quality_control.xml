<?xml version="1.0" ?>
<openerp>
    <data>
        
        
        <record id="email_prakruti_purchase_quality_control" model="email.template">
            <field name="name">Purchase QC</field>
            <field name="email_from">${object.quality_incharge.login}</field>          
            <field name="email_to">${object.prepared_by.login},${object.quality_incharge.login}</field>
            <field name="model_id" ref="model_prakruti_quality_control"/>
            <field name="auto_delete" eval="True"/> 
            <field name="subject">
                <![CDATA[ 
                  QC Completed Against GRN NO ${object.grn_no} and sent to GRN
                 ]]></field>
            <field name="body_html">
                <![CDATA[
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">                    
                        <p>Dear ${object.prepared_by.name},</p>
                        <p><b>QC HA Date:</b> ${object.grn_date},</p>
                        <p>The GRN No. ${object.grn_no}  is in GRN</p>
                        <p>Status is ${object.state}</p>
                        <p><b>Product Details</b></p>
                            <table  border=1>
                                    <tr>
                                        <td><b>Item </b></td>
                                        <td><b>Description</b></td>
                                        <td><b> Specification</b></td>
                                        <td><b> Received Qty</b></td>
                                        <td><b> Accepted Quantity </b></td>
                                        <td><b> Rejected Quantity </b></td>
                                        <td><b> Status </b></td>
                                    </tr>
                                    %  for line in object.control_line:
                                    <tr>
                                        <td>${line.product_id.name}</td>
                                        <td>${line.description}</td> 
                                        <td>${line.specification_id.specification_name}</td>           
                                        <td  align="right">${'{:.3f}'.format(line.quantity)}</td>       
                                        <td  align="right">${'{:.3f}'.format(line.accepted_qty)}</td>       
                                        <td  align="right">${'{:.3f}'.format(line.rejected_qty)}</td> 
                                        <td>${line.status}</td> 
                                    </tr>
                                    %endfor
                                </table>
                            <p><b>Remarks:</b> ${object.remarks}</p>
                    </div>
                    <br><br>
                    <p> Regards, </p>
                    <p> Prakruti ERP Application Admin</p>
                    <p>  ${object.quality_incharge.name}</p>
                ]]></field>
        </record>
        
        

             
