<?xml version="1.0" ?>
<openerp>
    <data>
        
        
        <record id="email_prakruti_store_request" model="email.template">
            <field name="name">Store Request</field>
            <field name="email_from">${object.requested_by.login}</field>          
            <field name="email_to">${object.store_incharge.login},${object.plant_incharge.login}</field>
            <field name="model_id" ref="model_prakruti_store_request"/>
            <field name="auto_delete" eval="True"/> 
            <field name="subject">
                <![CDATA[ 
                   Store Request No ${object.store_request_no} -raised and sent for Issue
                 ]]></field>
            
            <field name="body_html">
                <![CDATA[
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">                    
                        <p>Dear ${object.store_incharge.name},</p>     
                        <p><b>Requested Date:</b> ${object.request_date},</p>
                        <p>The Request No. ${object.store_request_no} </p>
                        <p><b>Product Details:</b></p>
                            <table  border=1>
                                    <tr>
                                        <td><b>Item </b></td>
                                        <td><b>Description</b></td>
                                        <td><b>Store Qty</b></td>
                                        <td><b>Req Qty</b></td>
                                    </tr>
                                    %  for line in object.grid_id:
                                    <tr>
                                        <td>${line.product_id.name}</td>
                                        <td>${line.description}</td>          
                                        <td  align="right">${'{:.3f}'.format(line.store_qty)}</td>         
                                        <td  align="right">${'{:.3f}'.format(line.requested_quantity)}</td> 
                                    </tr>
                                    %endfor
                                </table>
                    </div>
                    <br><br>
                    <p> Regards, </p>
                    <p> Prakruti ERP Application </p>
                    <p> ${object.requested_by.name} </p>
                ]]></field>
        </record>

        
        
