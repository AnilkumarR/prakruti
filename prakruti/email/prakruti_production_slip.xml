<?xml version="1.0" ?>
<openerp>
    <data>
        
        
        <record id="email_prakruti_production_slip" model="email.template">
            <field name="name">Production Slip</field>
            <field name="email_from">${object.quotation_id.login}</field>          
            <field name="email_to">${object.order_id.login},${object.quotation_id.login}</field>
            <field name="model_id" ref="model_prakruti_production_slip"/>
            <field name="auto_delete" eval="True"/> 
            <field name="subject">
                <![CDATA[ 
                   Production slip NO ${object.slip_no} accepted and is in Sales Order
                 ]]></field>
            <field name="body_html">
                <![CDATA[
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">                    
                        <p>Dear Team,</p>              
                        <p><b>Production SLip Date:</b> ${object.slip_date},</p>
                        <p>The PS No. ${object.slip_no} is in Order</p>
                        <p><b>Product Details:</b></p>
                            <table  border=1>
                                    <tr>
                                        <td><b>Item </b></td>
                                        <td><b>Description</b></td>
                                        <td><b> Specification</b></td>
                                        <td><b> Req Date</b></td>
                                        <td><b> Qty</b></td>
                                        <td><b> Scheduled Date</b></td>
                                        <td><b> Scheduled Qty</b></td>
                                        <td><b> Balance Qty</b></td>
                                        <td><b> Unit Price</b></td>
                                    </tr>
                                    %  for line in object.grid_id:
                                    <tr>
                                        <td>${line.product_id.name}</td>
                                        <td>${line.description}</td>        
                                        <td>${line.specification_id.specification_name}</td>   
                                        <td>${line.req_date}</td>          
                                        <td  align="right">${'{:.3f}'.format(line.quantity)}</td>  
                                        <td>${line.scheduled_date}</td>                    
                                        <td  align="right">${'{:.3f}'.format(line.scheduled_qty)}</td>               
                                        <td  align="right">${'{:.3f}'.format(line.balance_qty)}</td>
                                        <td  align="right">${'{:.3f}'.format(line.unit_price)}</td>
                                    </tr>
                                    %endfor
                                </table>
                            <p><b>Remarks:</b> ${object.remarks}</p>
                    </div>
                    <br><br>
                    <p> Regards, </p>
                    <p> Prakruti ERP Application </p>
                    <p>${object.quotation_id.name} </p>
                ]]></field>
        </record>
        
        
    
          
