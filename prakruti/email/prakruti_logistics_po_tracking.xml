<?xml version="1.0" ?>
<openerp>
    <data>
        
        
        <record id="email_prakruti_logistic_po_tracking" model="email.template">
            <field name="name">Logistics PO Tracking</field>
            <field name="email_from">${object.stores_incharge.login}</field>          
            <field name="email_to">${object.purchase_manager.login},${object.stores_incharge.login}</field>
            <field name="model_id" ref="model_prakruti_logistics_po_tracking"/>
            <field name="auto_delete" eval="True"/> 
            <field name="subject">
                <![CDATA[ 
                   Material against PO No ${object.po_no} is in Transit
                 ]]></field>
            <field name="body_html">
                <![CDATA[
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">                    
                        <p>Dear Team,</p>
                        <p><b>Logistics Date:</b> ${object.order_date},</p>
                        <p>The PO No. ${object.po_no}  is in Transit</p>
                        <p>The Tracking No. is ${object.tracking_number}</p>
                        <p><b>Product Details:</b></p> 
                        <table  border=1>
                                    <tr>
                                        <td><b>Item </b></td>
                                        <td><b> No. of Packings</b></td>
                                        <td><b> Packing Per. Qty</b></td>
                                        <td><b> Extra Packing</b></td>
                                        <td><b> Quantity Packed</b></td>
                                    </tr>
                                    %  for line in object.order_line:
                                    <tr>
                                        <td>${line.product_id.name}</td>  
                                        <td  align="right">${'{:.3f}'.format(line.no_of_packings)}</td>       
                                        <td  align="right">${'{:.3f}'.format(line.pack_per_qty)}</td>       
                                        <td  align="right">${'{:.3f}'.format(line.extra_packing)}</td>        
                                        <td  align="right">${'{:.3f}'.format(line.quantity)}</td>   
                                    </tr>
                                    %endfor
                                </table>
                            <p><b>Remarks:</b> ${object.remarks}</p>
                    </div>
                    <br><br>
                    <p> Regards, </p>
                    <p> Prakruti ERP Application </p>
                    <p>  ${object.stores_incharge.name}</p>
                ]]></field>
        </record>
        
