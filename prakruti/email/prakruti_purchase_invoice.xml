<?xml version="1.0" ?>
<openerp>
    <data>
        
        
        <record id="email_prakruti_purchase_invoice" model="email.template">
            <field name="name">Purchase Invoice</field>
            <field name="email_from">${object.prepared_by.login}</field>          
            <field name="email_to">${object.purchase_manager.login},${object.prepared_by.login}</field>
            <field name="model_id" ref="model_prakruti_purchase_invoice"/>
            <field name="auto_delete" eval="True"/> 
            <field name="subject">
                <![CDATA[ 
                   Purchase Invoice Created Against PO No ${object.po_no} and Gate pass No  ${object.pass_no} 
                 ]]></field>
            <field name="body_html">
                <![CDATA[
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">                    
                        <p>Dear Team,</p>
                        <p><b>Purchase Invoice Date:</b> ${object.purchase_invoice_date},</p>
                        <p>The PINV No. ${object.purchase_invoice_no}  </p>
                        <p><b>Product Details:</b></p>
                            <table  border=1>
                                    <tr>
                                        <td><b>Item </b></td>
                                        <td><b>Description</b></td>
                                        <td><b> No. of Packings</b></td>
                                        <td><b> Packing Per. Qty</b></td>
                                        <td><b> Extra Packing</b></td>
                                        <td><b> Received Quantity </b></td>
                                        <td><b> Unit Price </b></td>
                                        <td><b> Discount </b></td>
                                    </tr>
                                    %  for line in object.invoice_line:
                                    <tr>
                                        <td>${line.product_id.name}</td>
                                        <td>${line.description}</td>       
                                        <td  align="right">${'{:.3f}'.format(line.no_of_packings)}</td>       
                                        <td  align="right">${'{:.3f}'.format(line.pack_per_qty)}</td>       
                                        <td  align="right">${'{:.3f}'.format(line.extra_packing)}</td>        
                                        <td  align="right">${'{:.3f}'.format(line.quantity)}</td>       
                                        <td  align="right">${'{:.3f}'.format(line.unit_price)}</td>     
                                        <td  align="right">${'{:.3f}'.format(line.discount)}</td>  
                                    </tr>
                                    %endfor
                                </table>
                            <p><b>Remarks:</b> ${object.remarks}</p>
                    </div>
                    <br><br>
                    <p> Regards, </p>
                    <p> Prakruti ERP Application</p>
                    <p>${object.prepared_by.name} /p>
                ]]></field>
        </record>
        
        

        
        
        
        
        
    </data>
</openerp>
