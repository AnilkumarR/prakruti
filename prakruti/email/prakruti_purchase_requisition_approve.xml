<?xml version="1.0" ?>
<openerp>
    <data>
        
        
        <record id="email_prakruti_purchase_requisition_approve" model="email.template">
            <field name="name">Purchase Approve</field>
            <field name="email_from">${object.approved_by.login}</field>          
            <field name="email_to">${object.to_name.login},${object.purchase_manager.login},${object.stores_incharge.login},${object.plant_manager.login},${object.prepared_by.login},${object.approved_by.login}</field>
            <field name="model_id" ref="model_prakruti_purchase_requisition_approve"/>
            <field name="auto_delete" eval="True"/> 
            <field name="subject">
                <![CDATA[ 
                   PR NO ${object.requisition_no} Approved/Rejected and sent to Purchase Analysis
                 ]]></field>
            <field name="body_html">
                <![CDATA[
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">                    
                        <p>Dear Team,</p>           
                        <p><b>Approved Date:</b> ${object.approved_date},</p>
                        <p>The PR No. ${object.requisition_no}  is in Analysis</p>
                        <p><b>Product Details:</b></p>
                        <table  border=1>
                                    <tr>
                                        <td><b>Item </b></td>
                                        <td><b>Description</b></td>
                                        <td><b> Req Qty</b></td>
                                        <td><b> Qty Approved</b></td>
                                        <td><b> Available Stock</b></td>
                                        <td><b> Req Date</b></td>
                                        <td><b> Specification</b></td>
                                        <td><b> Last Purchase Date</b></td>
                                        <td><b> Status</b></td>
                                    </tr>
                                    %  for line in object.requisition_line:
                                    <tr>
                                        <td>${line.product_id.name}</td>
                                        <td>${line.description}</td> 
                                        <td  align="right">${'{:.3f}'.format(line.quantity_req)}</td>  
                                        <td  align="right">${'{:.3f}'.format(line.quantity)}</td>            
                                        <td  align="right">${'{:.3f}'.format(line.stock_on_pr_date_ref)}</td>
                                        <td>${line.required_date}</td>       
                                        <td>${line.specification_id.specification_name}</td>    
                                        <td>${line.last_purchase_date}</td>     
                                        <td>${line.status}</td>          
                                    </tr>
                                    %endfor
                                </table>
                    </div>
                    <br><br>
                    <p> Regards, </p>
                    <p> Prakruti ERP Application </p>
                    <p> ${object.approved_by.name} </p>
                ]]></field>
        </record>
        
        

        
        
        
        
        
    </data>
</openerp>
