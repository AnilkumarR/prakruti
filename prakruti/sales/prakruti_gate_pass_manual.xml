<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--     Search View for Manual Gate Pass     -->
        <record model="ir.ui.view" id="view_prakruti_gate_pass_manual_search">
            <field name="name">Prakruti Gate Pass Manual Search</field>
            <field name="model">prakruti.gate_pass_manual</field>
            <field name="arch" type="xml">
                <search string="Product Wise Search">
                    <field name="product_name"/>
                    <field name='pass_no' />
                    <field name='movement_type'/>
                    <field name='coming_from'/>
                    <field name='vendor_id'/>
                    <field name='local_vendor'/>
                </search>
            </field>
        </record>
        
        
    <!-- Tree view for Manual Gate Pass         -->
        <record model="ir.ui.view" id="view_prakruti_manual_gate_pass_tree">
            <field name="name"> Manual Gate Pass</field>
            <field name="model">prakruti.gate_pass_manual</field>
            <field name="arch" type="xml">
                <tree string="Manual Gate Pass">
                    <field name='pass_no' />
                    <field name='pass_date'/>
                    <field name='movement_type'/>
                    <field name='coming_from'/>
                    <field name='vendor_id'/>
                    <field name='local_vendor'/>
                </tree>
            </field>
        </record>
        
        <!--Form view for Manual Gate Pass          -->
        <record model="ir.ui.view" id="view_prakruti_manual_gate_pass_form">
            <field name="name">Manual Gate Pass</field>
            <field name="model">prakruti.gate_pass_manual</field>
            <field name="arch" type="xml">
                <form string="Manual Gate Pass">
                    <sheet>
                        <group>
                            <field name='gp_no' invisible="True"/>
                            <field name='auto_no' invisible="True"/>
                            <field name='req_no_control_id' invisible="True"/>
                        </group>
                        <group colspan="4" col="4">
                            <field name='pass_no' />
                            <field name='pass_date'/>
                            <field name='coming_from'/>
                            <field name='movement_type' />
                            <field name='company_id' options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                            <field name='vendor_id' domain="[ ('supplier','=',True)]" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                            <field name='local_vendor' attrs="{'invisible':[('vendor_id', '&gt;', 0)]}"/>
                        </group>
                        <notebook>
                            <page string="Product Details">
                                <field name='grid_id'/>
                            </page>
                        </notebook>
                        <group>
                            <field name="remarks" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        
    <!--  Tree view for Manual Gate Pass Line     -->
     <record model="ir.ui.view" id="view_prakruti_gate_pass_manual_line_tree">
         <field name="name">prakruti.gate_pass_manual_line.tree</field>
         <field name="model">prakruti.gate_pass_manual_line</field>
         <field name="arch" type="xml">
             <tree string="Manual Gate Pass Line" editable='bottom'>
                 <field name="product_name"/>
                 <field name="quantity"/>
                 <field name="remarks"/>
             </tree>
         </field>
     </record>
        
    <!--Pivot for Manual Gate Pass          -->
     <record model="ir.ui.view" id="view_prakruti_gate_pass_manual_pivot">
            <field name="name">prakruti.gate_pass_manual.pivot</field>
            <field name="model">prakruti.gate_pass_manual</field>
            <field name="arch" type="xml">
                <pivot string="Gate Pass Manual" display_quantity="True">
                    <field name="vendor_id" type="row"/>
                    <field name="company_id"/>
                </pivot>
            </field>
        </record>
        
        
    <!-- Action for Manual Gate Pass         -->
        <record model="ir.actions.act_window" id="prakruti_manual_gate_pass_action">
            <field name="name">Manual Gate Pass</field>
            <field name="res_model">prakruti.gate_pass_manual</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot</field>
        </record>
        <menuitem 
            name="Direct Material Gate Pass" 
            id="prakruti_manual_gate_pass_sub_menu" 
            parent="prakruti_gate_pass_main_sub_menu" 
            action="prakruti_manual_gate_pass_action" 
            sequence="4" 
            groups="group_prakruti_gate_pass_manual_read_only,group_prakruti_gate_pass_manual_create,group_prakruti_gate_pass_manual_edit,group_prakruti_gate_pass_manual_delete"
                  />
    
    </data>
</openerp>
