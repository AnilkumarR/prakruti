<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--   Search   -->
        <record model="ir.ui.view" id="view_prakruti_reserved_product_search">
            <field name="name">prakruti.reserved_product.search</field>
            <field name="model">prakruti.reserved_product</field>
            <field name="arch" type="xml">
                <search string="Reserved Product">
                    <field name='company_id' />
                    <field name="slip_id"/>
                    <field name="subplant_id"/>
                    <field name="product_id"/>
                    <field name="reserved_qty"/>
                    <field name="consumed_qty"/>
                </search>
            </field>
        </record>
        
        <!--  Tree   -->
        <record model="ir.ui.view" id="view_prakruti_reserved_product_tree">
            <field name="name">Reserved Product</field>
            <field name="model">prakruti.reserved_product</field>
            <field name="arch" type="xml">
                <tree string="Reserved Product" create = "false" delete = "false" edit = "false">
                    <field name='company_id'/>
                    <field name="slip_id"/>
                    <field name="subplant_id"/>
                    <field name="product_id"/>
                    <field name="reserved_qty"/>
                    <field name="consumed_qty"/>
                </tree>
            </field>
        </record>
        
      <!--  Form    -->
        <record model="ir.ui.view" id="view_prakruti_reserved_product_form">
            <field name="name">Reserved Product</field>
            <field name="model">prakruti.reserved_product</field>
            <field name="arch" type="xml">
                <form string="Reserved Product" create = "false" delete = "false" edit = "false">
                    <sheet>
                        <group colspan="4" col="4">
                            <field name='company_id' />
                            <field name="slip_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                            <field name="subplant_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                            <field name="product_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                            <field name="reserved_qty"/>
                            <field name="consumed_qty"/>
                        </group>
                    </sheet>    
                </form>
        </field>
    </record>
        
        
        <!-- Action  -->
        <record model="ir.actions.act_window" id="prakruti_reserved_product_list_action">
            <field name="name">Reserved Product</field>
            <field name="res_model">prakruti.reserved_product</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem name="Reserved Product" 
                  id="prakruti_reserved_product_list" 
                  parent="prakruti_stock_menu" 
                  action="prakruti_reserved_product_list_action" 
                  sequence="3"/>
    
    </data>
</openerp>
