<?xml version="1.0" encoding="utf-8"  ?>
<openerp>
 <data>
            <!--Search view for BMR Requisition          -->
        <record model="ir.ui.view" id="view_prakruti_bmr_requisition_search">
            <field name="name">prakruti.bmr_requisition.search</field>
            <field name="model">prakruti.bmr_requisition</field>
            <field name="arch" type="xml">
                <search string="Search By">
                    <field name='company_id' />
                    <field name="slip_id"/>
                    <field name="product_id"/>
                    <field name="batch_size"/>
                    <field name="request_id"/>
                    <field name='status'/>
                    <field name='requisition_type'/>
                    <field name='batch_name' />
                    <field name='batch_no' />
                </search>
            </field>
        </record>
        <!-- Form view for BMR Requisition      -->
     <record model="ir.ui.view" id="view_prakruti_bmr_requisition_form">
        <field name="name">BMR Requisition</field>
        <field name="model">prakruti.bmr_requisition</field>
        <field name="arch" type="xml">
            <form string="BMR Requisition" create= "false">
                <header>
                    <button name="raise_batch_master" string="Done" type="object" attrs="{'invisible':[('status','in',('batch_master'))]}"/>
                    <field name='status' widget='statusbar'/>
                </header>
                <group colspan="4" col="4">
                    <field name='requisition_type' readonly='1'/>
                    <field name='company_id' readonly='1'/>
                    <field name="bmr_no" />
                    <field name="slip_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                    <field name="product_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                    <field name="batch_size" attrs="{'readonly':[('status','in',('batch_master'))]}"/>
                    <field name="request_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" attrs="{'readonly':[('status','in',('batch_master'))]}"/>
                    <field name="bmr_number" invisible='1'/>
                    <field name="auto_no" invisible='1'/>
                    <field name="req_no_control_id" invisible='1'/>
                    <field name="start_date" invisible='1'/>
                    <field name="finish" invisible='1'/>
                    <field name='batch_name' invisible='1'/>
                    <field name='batch_no' invisible='1'/>
                </group>
            </form>
        </field>
    </record>
    
        <!--  Tree view for BMR Requisition     -->
    <record model="ir.ui.view" id="view_prakruti_bmr_requisition_tree">
            <field name="name">BMR Requisition</field>
            <field name="model">prakruti.bmr_requisition</field>
            <field name="arch" type="xml">
                <tree string="BMR Requisition" create= "false">
                    <field name='company_id' />
                    <field name='requisition_type'/>
                    <field name="slip_id"/>
                    <field name="product_id"/>
                    <field name="batch_size"/>
                    <field name="request_id"/>
                    <field name='status'/>
                </tree>
            </field>
        </record>   
        <!--Action for BMR Requisition          -->
    <record model="ir.actions.act_window" id="prakruti_bmr_requisition_action">
            <field name="name">BMR Requisition</field>
            <field name="res_model">prakruti.bmr_requisition</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
       
    <menuitem id="prakruti_bmr_requisition_sub_menu_1" 
              name="BMR Requisition" 
              action="prakruti_bmr_requisition_action"
              parent="prakruti_production_slip_main_sub_menu"
              sequence="3"
              groups="group_prakruti_bmr_requisition_delete,group_prakruti_bmr_requisition_create,group_prakruti_bmr_requisition_edit,group_prakruti_bmr_requisition_read_only"
              />

        
</data>  
</openerp>
            
                        