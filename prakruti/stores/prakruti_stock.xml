<?xml version="1.0" encoding="utf-8"?>
<openerp>
 <data>
            
        <!-- Graph View -->
        <record id="view_prakruti_stock_graph" model="ir.ui.view">
                <field name="name">view_prakruti_stock.graph</field>
                <field name="model">prakruti.stock</field>
                <field name="arch" type="xml">
                        <graph string="Product Information" type="pie">
                                <field name="product_id" type="row"/>
                                <field name="product_id" type="column"/>
                                <field name="product_qty" type="measure"/>
                        </graph>
                </field>
        </record>
     
     
        <!-- Calendar View -->
        <record id="view_prakruti_stock_calendar" model="ir.ui.view">
                <field name="name">prakruti.stock.calendar</field>
                <field name="model">prakruti.stock</field>
                <field name="arch" type="xml">
                        <calendar string="Product Information" date_start="entered_date" date_stop="entered_date" color="product_id" date_delay="product_qty">
                                <field name="product_id"/>
                        </calendar>
                </field>
        </record>
        
        
        <!-- Gantt View -->
        <record id="view_prakruti_stock_gantt" model="ir.ui.view">
                <field name="name">prakruti.stock.gantt</field>
                <field name="model">prakruti.stock</field>
                <field name="arch" type="xml">
                        <gantt string="Product" date_start="entered_date" date_stop="entered_date" color="product_id" default_group_by='product_id'>
                                <field name="product_id"/>
                        </gantt>
                </field>
        </record>
        
        
        <!--  Search View  -->
        <record model="ir.ui.view" id="view_prakruti_stock_search">
            <field name="name">prakruti.stock.search</field>
            <field name="model">prakruti.stock</field>
            <field name="arch" type="xml">
                <search string="Search">
                   <field name="product_id" string="Product"/>
                   <field name="origin" string="Origin/Source"/>
                   <field name="mrn_id" string="MRN No"/>
                   <field name="grn_id" string="GRN No"/>
                   <field name="issue_id" string="Issue No"/>
                   <field name="batch_id" string="Batch No"/>
                   <field name="dispatch_id" string="Dispatch No"/>
                   <field name="slip_id" string="Slip No"/>
                   <field name="adjustment_id" string="Adjustment Name/No"/>
                   <field name="inward_id" string="Inward No"/>
                   <field name="sales_grn_id" string="Sales GRN No"/>
                   <field name="virtual_qty" string="Virtual/Forecasted Qty"/>
                   <field name="product_qty" string="Actual Qty"/>
                   <field name="reserved_qty" string="Reserved Qty"/>
                   <field name="customer_id" string="Customer"/>
                   <field name="vendor_id" string="Vendor/Supplier"/>
                   <field name="location_id" string="Location"/>
                   <field name="entered_date" string="Entered Date"/>
                </search>
            </field>
        </record>
        
        <!--  Tree View -->
        <record model="ir.ui.view" id="view_prakruti_stock_tree">
            <field name="name">prakruti.stock.tree</field>
            <field name="model">prakruti.stock</field>
            <field name="arch" type="xml">
                <tree string="Stock" create="false" edit="false" delete="false">
                   <field name="product_id"/>
                   <field name="uom_id"/>
                   <field name="entered_date"/>
                   <field name="location_id"/>
                   <field name="origin"/>
                   <field name="company_id"/>
                   <field name="mrn_id"/>
                   <field name="grn_id"/>
                   <field name="issue_id"/>
                   <field name="batch_id"/>
                   <field name="dispatch_id"/>
                   <field name="slip_id"/>
                   <field name="adjustment_id"/>
                   <field name="inward_id"/>
                   <field name="sales_grn_id"/>
                   <field name="virtual_qty"/>
                   <field name="product_qty"/>
                   <field name="reserved_qty"/>
                   <field name="customer_id"/>
                   <field name="vendor_id"/>
                   <field name="remarks"/>
                </tree>
            </field>
        </record>
        
        <!-- Form View  -->
        <record model="ir.ui.view" id="view_prakruti_stock_form">
            <field name="name">prakruti.stock.form</field>
            <field name="model">prakruti.stock</field>
            <field name="arch" type="xml">
              <form string="Stock" create="false" edit="false" delete="false">
                    <group colspan="2" col="6">
                        <field name="product_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                        <field name="uom_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                        <field name="entered_date"/>
                        <field name="location_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                        <field name="origin"/>
                        <field name="company_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                        <field name="mrn_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                        <field name="grn_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                        <field name="issue_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                        <field name="batch_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                        <field name="dispatch_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                        <field name="slip_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                        <field name="adjustment_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                        <field name="inward_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                        <field name="sales_grn_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                        <field name="virtual_qty"/>
                        <field name="product_qty"/>
                        <field name="reserved_qty"/>
                        <field name="customer_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                        <field name="vendor_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                        <field name="remarks"/>
                    </group>
                </form>
            </field>
        </record>
        
        <!-- Action   -->
        <record model="ir.actions.act_window" id="view_prakruti_stock_action">
            <field name="name">Stock</field>
            <field name="res_model">prakruti.stock</field>
            <field name="view_type">form</field>
            <field name="context">{'group_by': 'product_id'}</field>
            <field name="view_mode">tree,form,calendar,graph,gantt</field>
        </record>
        
        
	<menuitem id="prakruti_stock_menu"
                  name="Stock" 
                  parent="prakruti_stores_main_menu" 
                  sequence="10"/>
        
        <menuitem sequence="1" 
                  name="Stock" 
                  id="prakruti_stock_sub_menu" 
                  action="view_prakruti_stock_action" 
                  parent="prakruti_stock_menu"
                  groups="group_prakruti_stock_read_only,group_prakruti_stock_edit,group_prakruti_stock_create,group_prakruti_stock_delete"/>
        
        
        
        
        
        
        <!--  Tree View -->
        <record model="ir.ui.view" id="view_prakruti_stock_location_tree">
            <field name="name">prakruti.stock.location.tree</field>
            <field name="model">prakruti.stock_location</field>
            <field name="arch" type="xml">
                <tree string="Stock Location">
                    <field name="company_id"/>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="remarks"/>
                </tree>
            </field>
        </record>
        
        <!-- Form View  -->
        <record model="ir.ui.view" id="view_prakruti_stock_location_form">
            <field name="name">prakruti.stock.location.form</field>
            <field name="model">prakruti.stock_location</field>
            <field name="arch" type="xml">
                <form string="Stock Location">
                    <sheet>
                        <group colspan="4" col="4" string="Stock Location">
                            <field name="company_id"/>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="remarks"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Action   -->
        <record model="ir.actions.act_window" id="view_prakruti_stock_location_action">
            <field name="name">Stock Location</field>
            <field name="res_model">prakruti.stock_location</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem sequence="2" 
                  name="Stock Location" 
                  id="prakruti_stock_location_sub_menu" 
                  action="view_prakruti_stock_location_action" 
                  parent="prakruti_stock_menu"
                  groups="group_prakruti_stock_location_read_only,group_prakruti_stock_location_edit,group_prakruti_stock_location_create,group_prakruti_stock_location_delete"/>
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
    </data>
</openerp>
