<?xml version="1.0" encoding="utf-8"?>
<openerp>
 <data>
        <record model="ir.ui.view" id="view_prakruti_material_outward_note_form">
            <field name="name">prakruti.material_outward_note.form</field>
            <field name="model">prakruti.material_outward_note</field>
            <field name="arch" type="xml">
             <form string="Prakruti Material Outward" delete="false" create="false">                 
                 <sheet>
                    <header>
                        <button name= 'material_outward_to_gate_pass' string="Gate Pass" type="object" attrs="{'invisible':[('sent_to_gate_pass_flag', '=', 1)]}"/>
                    </header>
                    <group colspan='4' col ='4'>
                        <field name="vendor_id" options='{"no_open": True, "no_create": True}'  readonly="True"/>                                
                        <label for="address_line_1" string="Vendor Address"/>
                        <div class="o_address_format">
                            <field name="address_line_1" placeholder="Street..." class="o_address_street" readonly="True"/>
                            <field name="address_line_2" placeholder="Street 2..." class="o_address_street" readonly="True"/>
                            <field name="address_line_3" placeholder="City" class="o_address_city" readonly="True"/>
                            <field name="address_line_3_1" class="o_address_state" placeholder="State" options='{"no_open": True, "no_create": True}' readonly="True"/>
                            <field name="address_line_3_2" placeholder="ZIP" class="o_address_zip" readonly="True"/>
                            <field name="address_line_4" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}' readonly="True"/>
                        </div>
                        <field name="party_vat_no" readonly="True"/>
                        <field name="party_cst_no" readonly="True"/>
                        <field name="mon_no" readonly="True"/>
                        <field name="mon_date" readonly="True"/>
                        <field name="company_id" options='{"no_open": True, "no_create": True}'/>
                        <field name="c_tin_vat" readonly="True"/>
                        <field name="gst" readonly="True"/>
                    </group>
                    <notebook>
                        <page name='product_details' string='Order Line'>
                            <field name="order_line" >
                                <tree editable='bottom' create= "false">
                                    <field name="product_id" options='{"no_open": True, "no_create": True}' />
                                    <field name="description"/>
                                    <field name="uom_id" options='{"no_open": True, "no_create": True}'/>
                                    <field name="no_of_pack"/>
                                    <field name="pack_size"/>
                                    <field name="qty"/>
                                    <field name="amount"/>
                                    <field name='remarks'  />
                                </tree>
                                <form>
                                    <group>
                                        <field name="product_id"/>
                                        <field name="uom_id"/>
                                        <field name="no_of_pack"/>
                                        <field name="pack_size"/>
                                        <field name="qty"/>
                                        <field name="amount"/>
                                        <field name='remarks'  />
                                    </group>
                                </form>
                            </field>
                            <group>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name='total_no_of_pack'/> 
                                    <field name='total_no_of_qty' />
                                    <field name='total_amount'  />
                                </group>
                            </group>
                        </page>
                        <page name='other_details' string='Other Details'>
                            <group colspan='2' col ='6'>
                                <field name='s_ing' options='{"no_open": True, "no_create": True}'/>
                                <field name='transporter_name' />
                                <field name='t_pay_det'  />
                                <field name='doc_no'/> 
                                <field name='rev_no' />
                                <field name='doc_date'  />
                            </group>
                            <group>
                                <field name='material_no' invisible="True"/>
                                <field name='auto_no' invisible="True"/>
                                <field name='req_no_control_id' invisible="True"/>
                                <field name='sent_to_gate_pass_flag' invisible="True"/>
                            </group>
                            <group>
                                <field name='remarks'  />
                            </group>
                        </page>   
                    </notebook>
                </sheet>
             </form>
            </field>
        </record>
    
        <record model="ir.ui.view" id="view_prakruti_material_outward_note_tree">
            <field name="name">prakruti.material_outward_note.tree</field>
            <field name="model">prakruti.material_outward_note</field>
            <field name="arch" type="xml">
                <tree string="Prakruti Material Outward" delete="false" create="false">
                    <field name="mon_no" />
                    <field name="mon_date" />
                    <field name="vendor_id" />
                    <field name="company_id" />
                </tree>
            </field>
        </record>     

        <record model="ir.actions.act_window" id="prakruti_material_outward_note_action">
            <field name="name">Prakruti Material Outward</field>
            <field name="res_model">prakruti.material_outward_note</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
	
	
        <menuitem name="Material Outward Note" 
                  id="prakruti_material_outward_note"
                  action="prakruti_material_outward_note_action" 
                  sequence="4"
                  parent="prakruti_sotres_main_sub_menu" 
                  groups="group_prakruti_material_outward_note_read_only,group_prakruti_material_outward_note_edit,group_prakruti_material_outward_note_create,group_prakruti_material_outward_note_delete"/>

   

</data>
</openerp>
