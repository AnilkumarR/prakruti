<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_all_products_list"> 
            <t t-name="report.external_layout_header">
                <div class="header" style=" width: 235mm; ">
                    <div class="row">
                        <div align="center"> <strong>Product Current Available Stock</strong> 
                        </div>
                        <div class="col-xs-3">
                            <img src='/prakruti/static/src/img/logo.png' />
                        </div>
                        <div class="col-xs-9 text-right" style="margin-top:0px;">
                            <span t-field="o.company_id.rml_header1" /><br />
                            <address>
                                <strong>Address: </strong><span class="inline" t-field="o.company_id.name"/><br/>
                                        <span class="inline" t-field="o.company_id.street"/> 
                                        <span class="inline" t-field="o.company_id.street2"/> <br/>
                                        <span class="inline" t-field="o.company_id.city"/>,
                                        <span class="inline" t-field="o.company_id.zip"/>
                                        <span class="inline" t-field="o.company_id.state_id"/><br/>
                                        <strong> Phone No:</strong><span class="inline" t-field="o.company_id.phone"/>
                            </address>
                        </div>
                    </div>
                </div>
            </t>
            <t t-name="prakruti.report_all_products_list">
                <div class="page">
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th class="text-left"><strong>SNo</strong></th>
                                <th class="text-left"><strong>Product</strong></th> 
                                <th class="text-left"><strong>UOM</strong></th>
                                <th class="text-left"><strong>Stock</strong></th> 
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.product_line" t-as="line">
                                <td class="text-left">
                                    <span t-esc="line_index+1"/>
                                </td>
                                <td class="text-left">
                                    <span t-field="line.item_id"/>
                                </td>
                                <td class="text-left">
                                    <span t-field="line.item_uom_id"/>
                                </td>
                                <td class="text-left">
                                    <span t-field="line.item_quantity"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </template>
        
        
        <template id="report_all_products">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="prakruti.report_all_products_list" />
                    </t>
                </t>
        </template>

    </data>
</openerp>


                            