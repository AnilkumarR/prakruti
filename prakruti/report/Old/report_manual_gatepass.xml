<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <template id="report_gate_pass_manual_document">
            <t t-name="report.external_layout_header">
                <div class="header" style=" width: 235mm; border:1px solid black; ">
                    <div class="row">
                        <div align="center" style="font-size:20px;"> <strong>MANUAL GATE PASS</strong> </div>
                        <div class="col-xs-2">
                            <img src='/prakruti/static/src/img/logo.png' style="margin-left:3px;"/>
                        </div>
                        <div class="col-xs-10 text-right" style="margin-top:0px;margin-right:0px;">
                            <span t-field="o.company_id.rml_header1" /><br />
                            <address>
                                <strong> <span style="font-size: 20px" class="inline" t-field="o.company_id.name"/></strong><br/>
                                        <span class="inline" t-field="o.company_id.street"/>,<span class="inline" t-field="o.company_id.street2"/> <br/>
                                         <span class="inline" t-field="o.company_id.city"/>,<span class="inline" t-field="o.company_id.state_id"/>,<span class="inline" t-field="o.company_id.zip"/><br/>
                                        <strong> Phone No:</strong><span class="inline" t-field="o.company_id.phone"/>
                                        <br/>
                            </address>
                        </div>
                        
                        
                    </div>
                
                </div>
            </t>
            
            
            
            
            <t t-name="prakruti.report_gate_pass_manual_document">
                
                <div class="page" style="width: 235mm; border:1px solid black; ">
                    <div class="row" style="font-size:11px">
                        <div class="col-xs-12">
                    
                    <table  border="1" style="width: 235mm; border:1px solid black;">
                        <tr>
                            <td style="margin-top:1px;margin-left:1px;margin-right:1px;"><b>GP No: </b> <span class="inline" t-field="o.pass_no"/></td>
                        </tr>
                        <tr>
                            <td style="margin-top:1px;margin-left:1px;margin-right:1px;"><b>Date:  </b> <span class="inline" t-field="o.pass_date"/></td>
                        </tr>
                        <tr>
                            <td style="font-family:italic;margin-top:1px;margin-left:1px;margin-right:1px; "><p>Following Materials are allowed to pass the premises</p></td>
                        </tr>    
                        <tr>
                            <td style="margin-top:1px;margin-left:1px;margin-right:1px;"><b>Name of the party:</b><span class="inline" t-field="o.vendor_id"/> </td>
                        </tr>          
                    </table>
                    <br/>
                   
                    <th class="text-center" style="border: 1px solid #000000;"><strong>Inward/Outward Document Type</strong></th>
                    <td  style="border: 1px solid #000000;"><span t-field="o.movement_type"/></td>
                    
                    
                     <br/> <br/>
                    
                    <table  style="width: 235mm; border:1px solid black;">
                        <thead>
                            <tr>
                                <th class="text-center" style="border: 1px solid #000000;"><strong>Sl No</strong></th>
                                <th class="text-center" style="border: 1px solid #000000;"><strong>Name of the Product</strong></th>
                                 <th class="text-center" style="border: 1px solid #000000;"><strong>Qty as per Documents</strong></th>
                                <th class="text-center" style="border: 1px solid #000000;"><strong>Remarks</strong></th>
                            </tr>
                        </thead>
                        
                            <tr t-foreach="o.grid_id" t-as="line">
                                <td class="col-xs-1" style="border: 1px solid #000000;">
                                    <span t-esc="line_index+1"/>
                                </td>
                                <td  style="border: 1px solid #000000;">
                                    <span t-field="line.product_name"/>
                                </td>
                                <td  style="border: 1px solid #000000;">
                                    <span t-field="line.quantity"/>
                                </td>
                                <td  style="border: 1px solid #000000;">
                                    <span t-field="line.remarks"/>
                                </td>
                            </tr>
                    </table>
                </div>
            </div>
         </div>
    </t>
                
        <t t-name="report.external_layout_footer">
            <div class="footer">
                 <div class="text-center" style=" width: 235mm;">
                    <ul class="list-inline">
                        <li><strong> SUBJECT TO KARWAR JURISDICTION</strong> </li>
                    </ul>
                </div>
            </div>
        </t>
</template>           

        <template id="report_gate_pass_manual_1">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="prakruti.report_gate_pass_manual_document" />
                    </t>
                </t>
        </template>
    </data>
</openerp>

                            

































