<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_material_rejection_note_document">
    <t t-name="report.external_layout_header">
        <div class="header" style=" width: 235mm; border:1px solid black; ">
            <div class="row">
                <div align="center" style="font-size:20px;"> <strong>MATERIAL REJECTION NOTE</strong> </div>
                <div class="col-xs-2">
                    <img src='/prakruti/static/src/img/logo.png' style="margin-left:3px;"/>
                </div>
                <div class="col-xs-10 text-right" style="margin-top:0px;margin-right:0px;">
                    <span t-field="o.company_address.rml_header1" /><br />
                    <address>
                        <strong> <span style="font-size: 20px" class="inline" t-field="o.company_address.name"/></strong><br/>
                                <span class="inline" t-field="o.company_address.street"/>,<span class="inline" t-field="o.company_address.street2"/> <br/>
                                    <span class="inline" t-field="o.company_address.city"/>,<span class="inline" t-field="o.company_address.state_id"/>,<span class="inline" t-field="o.company_address.zip"/><br/>
                                <strong> Phone No:</strong><span class="inline" t-field="o.company_address.phone"/>
                                <br/>
                    </address>
                </div>
            </div>
        </div>
    </t>
    <t t-name="prakruti.report_material_rejection_note_document">
    <div class="page" style="width: 235mm; border:1px solid black; ">
        <div class="row" style="font-size:11px">
            <div class="col-xs-12">
       <table style="width: 235mm; border:1px solid black; ">
           <tr>
               <td align="left" style="border:1px solid black;" ROWSPAN="5"><b>Name and address of the Party:</b><br/><span t-field="o.vendor_id.name"/><br/>
                                                             <span t-field="o.vendor_id.street"/><br/>
                                                             <span t-field="o.vendor_id.street2"/><br/>
                                                             <span t-field="o.vendor_id.city"/><span t-field="o.vendor_id.zip"/><br/>
                                                             <span t-field="o.vendor_id.state_id"/>
                                                             <span t-field="o.vendor_id.country_id"/>
               </td>
                <td style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;" ><b>GRN No:</b><span t-field="o.grn_no"/></td>
                <td style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;" ><b>Date:</b><span t-field="o.return_date"/></td>
            </tr>
            <tr>
                <td style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;" ><b>Invoice No:</b><span t-field="o.invoice_no"/></td>
                <td style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;" ><b>Date:</b><span t-field="o.invoice_date"/></td>
            </tr>
            <tr>
                <td style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;"><b>Form 505 No:</b></td>
                <td style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;"><b>Date:</b></td>
            </tr>
            
            <tr>
                <td style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;" ><b>Party VAT No:</b><span t-field="o.vendor_id.vat_no"/></td>
                <td style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;" ><b>Party CST No:</b><span t-field="o.vendor_id.cst_no"/></td>
            </tr>
            <tr>
                <td colspan="2" style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;"><b>Other Details if Any:</b></td>
            </tr>
                  
            <tr>
                <td align="left" style="border:1px solid black;" rowspan="1"><b>Name of the Transporter:</b><br /><span t-field="o.transporter_name"/></td>
                <td style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;" ><b>GC No:</b><span t-field="o.gc_no"/></td>
                <td style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;" ><b>Date:</b><span t-field="o.gc_date"/></td>
            </tr>
           </table>
        
           
           <table  style="width:235mm ;border:1px solid black;">
                <thead>
                    <tr>
                        <th class="text-center" style="border: 1px solid #000000;"><strong>Sl No</strong></th>
                        <th class="text-center" style="border: 1px solid #000000;"><strong>Product</strong></th>
                        <th class="text-center" style="border: 1px solid #000000;"><strong>Description</strong></th>
                        <th class="text-center" style="border: 1px solid #000000;"><strong>UOM</strong></th>
                        <th class="text-center" style="border: 1px solid #000000;"><strong>No of Packings</strong></th>
                        <th class="text-center" style="border: 1px solid #000000;"><strong>Packing Size</strong></th>
                        <th class="text-center" style="border: 1px solid #000000;"><strong>Qty</strong></th>
                        <th class="text-center" style="border: 1px solid #000000;"><strong>Amount</strong></th>
                    </tr>
                </thead>
                <tr t-foreach="o.return_line" t-as="line">
                    <td class="col-xs-1" style="border: 1px solid #000000;">
                        <span t-esc="line_index+1"/>
                    </td>
                    <td  style="border: 1px solid #000000;">
                        <span t-field="line.product_id"/>
                    </td>
                    <td  style="border: 1px solid #000000;">
                        <span t-field="line.description"/>
                    </td>
                    <td  style="border: 1px solid #000000;">
                        <span t-field="line.uom_id"/>
                    </td>
                    <td  style="border: 1px solid #000000;">
                        <span t-field="line.no_of_packing"/>
                    </td>
                    <td  style="border: 1px solid #000000;">
                        <span t-field="line.packing_size"/>
                    </td>
                    <td  style="border: 1px solid #000000;">
                        <span t-field="line.return_qty"/>
                    </td>                                
                    <td  style="border: 1px solid #000000;">
                        <span t-field="line.unit_price"/>
                    </td>
                </tr>
            </table>
            <!-- For Calculation Hay Hay  -->
                <table  style="width:235mm ;border:1px solid black;">                
                    <tr>
                        <td align="left"><strong>Total :</strong></td>
                        <td align="left"><strong><span t-field="o.total"/></strong></td>
                        <td></td>
                        <td>
                            .
                        </td> 
                    </tr>                           
                    <tr style="border-collapse: collapse;">                    
                        <td style="margin-top:1px;margin-left:1px;margin-right:1px"><strong>Time of Removal:</strong><span t-field="o.time_of_removal"/><br/></td>                                                    
                    </tr >
                    <tr style="border-collapse: collapse;">
                        <td style="margin-top:1px;margin-left:1px;margin-right:1px"><strong>Reason for Rejection:</strong><span t-field="o.reason_for_rejection"/><br/></td>
                    </tr>
                    <tr style="border-collapse: collapse;">
                        <td style="margin-top:1px;margin-left:1px;margin-right:1px"><strong>VAT TIN:</strong><span t-field="o.tin_vat"/></td>
                        <td  align="right">For<strong> Prakruti Products Pvt. Limited</strong><br/></td>
                    </tr>
                    <tr>
                        <td>
                            .
                        </td>
                    </tr>
                    <tr>
                        <td>
                            .
                        </td>
                    </tr>
                    <tr>
                        <td>
                            .
                        </td>
                    </tr>
                    <tr>
                        <td align="right"><span t-field="o.dispatch_asst"/></td>                            
                    </tr>
                    <tr>
                        <td align="left"><strong>Authorized Signatory</strong></td>
                        <td align="right"><strong>Dispatch Asst.</strong></td>
                    </tr>                        
                </table>
            </div>
        </div>
      </div>
    </t>
    
     <t t-name="report.external_layout_footer">
            <div class="footer">
                 <div class="text-center" style=" width: 235mm;">
                    <ul class="list-inline">
                        <li><strong> SUBJECT TO KARWAR JURISDICTION</strong> </li>
                    </ul>
                </div>
            </div>
        </t>
</template>
                
               
<template id="report_material_rejection_note">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="prakruti.report_material_rejection_note_document" />
            </t>
        </t>
</template>

</data>
</openerp>