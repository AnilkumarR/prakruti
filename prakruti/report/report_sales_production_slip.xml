<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <template id="report_prakruti_production_slip_document">
            <t t-name="report.external_layout_header">
                <div class="header" style=" width: 235mm; border:1px solid black; height: 150px; ">
                    <div class="row">
                        <div align="center" style="font-size:20px;"> <strong>Production Slip</strong> </div>
                        <div class="col-xs-2">
                            <img src='/prakruti/static/src/img/logo.png' style="margin-left:3px;"/>
                        </div>
                        <div class="col-xs-10 text-right" style="margin-top:0px;margin-right:0px;">
                            <span t-field="o.company_id.rml_header1"/><br/>
                            <address>
                                <strong>
                                    <span style="font-size: 20px" class="inline" t-field="o.company_id.name"/>
                                </strong><br/>
                                    <span class="inline" t-field="o.company_id.street"/>,<br/> <span class="inline" t-field="o.company_id.street2"/>
                                    <span class="inline" t-field="o.company_id.city"/>,<span class="inline" t-field="o.company_id.state_id"/>,
                                    <span class="inline" t-field="o.company_id.zip"/><br/>
                                <strong>Phone No:</strong><span class="inline" t-field="o.company_id.phone"/><br/>
                            </address>
                        </div>
                    </div>
                </div>
            </t>
            
            <t t-name="prakruti.report_prakruti_production_slip_document">
                <div class="page" style=" width: 235mm; border:1px solid black; ">
                    
                    <table border="1" style="width: 235mm; border:1px solid black;">
                            <tr>
                                <td style="margin-top:1px;margin-left:1px;margin-right:1px;"><strong>Slip No:</strong><span class="inline" t-field="o.slip_no"/></td>
                                <div t-if="o.order_no">
                                    <td style="margin-top:1px;margin-left:1px;margin-right:1px;"><strong>Order No:</strong><span class="inline" t-field="o.order_no"/></td>
                                </div>
                            </tr>
                            <tr>
                                <td style="margin-top:1px;margin-left:1px;margin-right:1px;"><strong>Slip Date:</strong><span class="inline" t-field="o.slip_date"/></td>
                                <div t-if="o.order_no">
                                    <td style="margin-top:1px;margin-left:1px;margin-right:1px;"><strong>Order Date:</strong><span class="inline" t-field="o.order_date"/></td>
                                </div>
                            </tr>
                            <tr>
                                <td style="margin-top:1px;margin-left:1px;margin-right:1px;"><strong>PO No:</strong><span class="inline" t-field="o.po_no"/></td>
                                <td ></td>
                            </tr>
                            <tr>
                                <div t-if="o.order_no">
                                    <td style="margin-top:1px;margin-left:1px;margin-right:1px;"><strong>Customer:</strong><span class="inline" t-field="o.customer_id"/></td>
                                </div>
                                <div t-if="o.order_no">
                                    <td style="margin-top:1px;margin-left:1px;margin-right:1px;"><strong>Production Type:</strong><span class="inline" t-field="o.slip_type"/></td>
                                </div>
                                <div t-if="o.slip_type =='buffer'">
                                    <td style="margin-top:1px;margin-left:1px;margin-right:1px;"><strong>Production Type:</strong><span class="inline" t-field="o.slip_type"/></td>
                                </div>
                            </tr>
                    </table>
                    <table border="1" style="width: 235mm; border:1px solid black;">
                      <tr>
                           <th  style="border: 1px solid #000000;" class="text-center">
                              Material
                            </th>
                            <th  style="border: 1px solid #000000;" class="text-center">
                              UOM
                            </th>
                           <th  style="border: 1px solid #000000;" class="text-center">
                               Description Of Goods
                            </th>
                            <th  style="border: 1px solid #000000;" class="text-center">
                             Req Date
                            </th>
                            <th  style="border: 1px solid #000000;" class="text-center">
                             Req Qty
                            </th>
                            <th  style="border: 1px solid #000000;" class="text-center">
                             Sch Date
                            </th>
                            <th  style="border: 1px solid #000000;" class="text-center">
                             Sch Qty
                            </th>
                      </tr>
                    
                      <tr t-foreach="o.grid_id" t-as="line">
                            <td  style="border: 1px solid #000000;">
                                <span t-field="line.product_id"/>
                            </td>
                            <td  style="border: 1px solid #000000;">
                                <span t-field="line.uom_id"/>
                            </td>
                            <td  style="border: 1px solid #000000;">
                                <span t-field="line.description"/>
                            </td>
                            <td  style="border: 1px solid #000000;">
                                <span t-field="line.req_date"/>
                            </td>
                            <td   class="text-right" style="border: 1px solid #000000;">
                                <span t-field="line.quantity" t-esc="'%.3f'% line.quantity"/>
                            </td>
                            <td  style="border: 1px solid #000000;">
                                <span t-field="line.scheduled_date"/>
                            </td> 
                            <td  style="border: 1px solid #000000;">
                                <span t-field="line.scheduled_qty"/>
                            </td> 
                      </tr>
                  </table>
                    
                </div>
            </t>
            
                
        <t t-name="report.external_layout_footer">
            <div class="footer">
                 <div class="text-center" style=" width: 235mm;">
                    <ul class="list-inline">
                        <li><strong> SUBJECT TO KARWAR JURISDICTION</strong> </li>
                    </ul>
                </div>
            </div>
        </t>   
            
        </template>
        
               
        <template id="report_prakruti_production_slip">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="prakruti.report_prakruti_production_slip_document" />
                </t>
            </t>
        </template>

    </data>
</openerp>
