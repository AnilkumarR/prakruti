<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_grn_document">
           
            
            <t t-name="report.external_layout_header">
                <div class="header" style=" width: 235mm; border:1px solid black; ">
                    <div class="row">
                        <div align="center" style="font-size:20px;"> <strong>GOODS RECIEVED NOTE</strong> </div>
                        <div class="col-xs-2">
                            <img src='/prakruti/static/src/img/logo.png' style="margin-left:3px;"/>
                        </div>
                        <div class="col-xs-10 text-right" style="margin-top:0px;margin-right:0px;">
                            <span t-field="o.company_address.rml_header1" /><br />
                            <address>
                                <strong> <span style="font-size: 20px" class="inline" t-field="o.company_address.name"/></strong><br/>
                                        <span class="inline" t-field="o.company_address.street"/>,<span class="inline" t-field="o.company_address.street2"/> <br/>
                                         <span class="inline" t-field="o.company_address.city"/>,<span class="inline" t-field="o.company_address.state_id"/>,<span class="inline" t-field="o.company_address.zip"/><br/>
                                        <strong> Phone No:</strong><span class="inline" t-field="o.company_address.phone"/>
                                        <br/>
                            </address>
                        </div>
                        
                        
                    </div>
                
                </div>
            </t>
            

    
    
<t t-name="prakruti.report_grn_document">
   <div class="page" style="width: 235mm; border:1px solid black; ">
        <div class="row" style="font-size:11px">
            <div class="col-xs-12">
            <table  border="1" style="width: 235mm; border:1px solid black;">
                <tr>
                    <td style="margin-top:1px;margin-left:1px;margin-right:1px;"><strong>Name and address of the sender:</strong><br/><span t-field="o.vendor_id.name"/><br/>
                                                            <span t-field="o.vendor_id.street"/><br/>
                                                            <span t-field="o.vendor_id.street2"/><br/>
                                                            <span t-field="o.vendor_id.city"/>,<span t-field="o.vendor_id.zip"/><br/>
                                                            <span t-field="o.vendor_id.state_id"/>,
                                                            <span t-field="o.vendor_id.country_id"/>
                        </td>
                </tr> 
            
           </table>
            
            <table border="1" style="width: 235mm; border:1px solid black;">
                <tr>
                    <td rowspan="5" style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;"><strong>Transport Payment Details :</strong> <span t-field="o.transporter_payment_details"/> </td>
                    <td style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;" ><strong>GRN No:</strong><span t-field="o.grn_no"/></td>
                    <td style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;" ><strong>Date: </strong><span t-field="o.grn_date"/></td>
                </tr>
                
                
               <!-- <tr>
                    <td style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;" ><strong>Invoice No:</strong><span t-field="o.invoice_no"/></td>
                    <td style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;" ><strong>Date:</strong><span t-field="o.invoice_date"/></td>
                </tr>-->
                <tr>
                     <td style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;" ><strong>PO No:</strong><span t-field="o.po_no"/></td>
                     <td style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;" ><strong>Date:</strong> <span t-field="o.order_date"/></td>
                </tr>
                <tr>
                    <td style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;" ><strong>DC No:</strong><span t-field="o.dc_no"/></td>
                    <td style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;" ><strong>Date:</strong><span t-field="o.dc_date"/></td>
                </tr>
                <tr>
                   <td style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;" ><strong>GC No:</strong><span t-field="o.gc_no"/></td>
                       <td style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;" ><strong>Date:</strong><span t-field="o.gc_date"/></td>
                </tr>
                
                <tr>
                    <td colspan="3" style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;"><strong>Name of the Transporter:</strong> <span t-field="o.transporter_name"/> </td>
                </tr>
                
            </table>
          
        
           
                  <table border="1" style="width: 235mm; border:1px solid black;">
                        <thead>
                            <tr>
                                <th class="text-center" style="border: 1px solid #000000;"><strong>Sl No</strong></th>
                                <th class="text-center" style="border: 1px solid #000000;"><strong>Name of the Material</strong></th>
                                <th class="text-center" style="border: 1px solid #000000;"><strong>UOM</strong></th>
                                <th class="text-center" style="border: 1px solid #000000;"><strong>Qty Billed</strong></th>
                                <th class="text-center" style="border: 1px solid #000000;"><strong>Qty Recieved</strong></th>
                                <th class="text-center" style="border: 1px solid #000000;"><strong>Remarks</strong></th>
                            </tr>
                        </thead>
                        
                        <tr t-foreach="o.order_line" t-as="line">
                                <td class="col-xs-1" style="border: 1px solid #000000;">
                                    <span t-esc="line_index+1"/>
                                </td>
                                <td  style="border: 1px solid #000000;">
                                    <span t-field="line.product_id"/>
                                </td>
                                <td  style="border: 1px solid #000000;">
                                    <span t-field="line.uom_id"/>
                                </td>
                                <td class="text-right"  style="border: 1px solid #000000;">
                                    <span t-field="line.actual_quantity"/>
                                </td>
                                <td  class="text-right"  style="border: 1px solid #000000;">
                                    <span t-field="line.quantity"/>
                                </td>
                                <td  style="border: 1px solid #000000;">
                                    <span t-field="line.remarks"/>
                                </td>
                            </tr>
                    </table>
                        
                        <table style="width: 235mm;">        
                            <tr>                                
                                <td style="margin-top:1px;margin-left:1px;margin-right:1px;"><strong>Recieved Remarks:</strong><span t-field="o.remarks"/></td>
                            </tr>       
                            <tr>                            
                                <td style="margin-top:1px;margin-left:1px;margin-right:1px;"><strong>Material Approval Status:</strong><span t-field="o.state"/></td>
                            </tr>           
                            <tr>                            
                                <td style="margin-top:1px;margin-left:1px;margin-right:1px;"><strong>Approval Remarks:</strong><span t-field="o.grn_remarks"/></td>
                            </tr>  
                            <tr>
                                <td>.</td>
                            </tr>
                            <tr>                            
                                <td style="margin-top:1px;margin-left:1px;margin-right:1px;"><strong>Authorized Signatory</strong></td>
                                <td style="margin-top:1px;margin-left:1px;margin-right:1px;"><strong>Stores Incharge:</strong> <span t-field="o.stores_incharge"/></td>
                            </tr>              
                        </table> 
                    </div>
                </div>  
        </div>
    </t>
    
     <t t-name="report.external_layout_footer">
            <div class="footer">
                 <div class="text-center" style=" width: 235mm;">
                    <ul class="list-inline">
                        <li><strong> SUBJECT TO KARWAR JURISDICTION</strong> </li>
                    </ul>
                </div>
            </div>
        </t>
    
    
    
</template>
           
               
<template id="report_grn">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="prakruti.report_grn_document" t-lang="o.purchase_manager.lang"/>
            </t>
        </t>
</template>

</data>
</openerp>
