<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <template id="report_production_transfernote_document">
            <t t-name="report.external_layout_header">
                <div class="header" style="width: 235mm; border:1px solid black;">
                    <div class="row">
                        <div align="center" style="font-size:20px;"><strong>Production Transfer Note</strong></div>
                        <div class="col-xs-2">
                            <img src='/prakruti/static/src/img/logo.png' style="margin-left:3px;"/>
                        </div>
                        <div class="col-xs-10 text-right" style="margin-top:0px;margin-right:0px;">
                            <span t-field="o.company_id.rml_header1"/><br/>
                            <address>
                                <strong>
                                    <span style="font-size: 20px" class="inline" t-field="o.company_id.name"/>
                                </strong><br/>
                                    <span class="inline" t-field="o.company_id.street"/>,<span class="inline" t-field="o.company_id.street2"/><br/>
                                    <span class="inline" t-field="o.company_id.city"/>,<span class="inline" t-field="o.company_id.state_id"/>,<span class="inline" t-field="o.company_id.zip"/><br/>
                                <strong>Phone No:</strong><span class="inline" t-field="o.company_id.phone"/><br/>
                            </address>
                        </div>
                    </div>
                </div>
            </t>
            
            <t t-name="prakruti.report_production_transfernote_document">
                <div class="page" style="width: 235mm;border:1px solid black;">
                    <div class="row" style="font-size:11px">
                        <div class="col-xs-12">
                            <table style="width: 235mm;border:1px solid black;">
                                    <tr>
                                        <td style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;"><strong>PTN No:</strong><span class="inline" t-field="o.ptn_no"/></td>
                                        <td style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;"><strong>PTN Date:</strong><span class="inline" t-field="o.date"/></td>
                                    </tr>
                                    <tr>
                                        <td style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;"><strong>Batch No:</strong><span class="inline" t-field="o.batch_no"/></td>
                                        <td style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;"><strong>Allocated By:</strong><span t-field="o.batch_allocated_by"/></td>
                                    </tr>
                                    <tr>
                                        <td style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;"><strong>From:</strong><span class="inline" t-field="o.dept_from"/></td>
                                        <td style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;"><strong>To:</strong><span class="inline" t-field="o.dept_to"/></td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" style="margin-top:1px;margin-left:1px;margin-right:1px;border:1px solid black;"><p><strong>Take the receipt of the following materials</strong></p></td>
                                    </tr>
                            </table>
                        
                        <table style="width: 235mm; border:1px solid black;">
                            <thead>
                                <tr>
                                    <th>Sl.No</th>
                                    <th class="text-right" style="border: 1px solid #000000;">Description Of Goods</th>
                                    <th class="text-right" style="border: 1px solid #000000;">UOM</th>
                                    <th class="text-right" style="border: 1px solid #000000;">Specification</th>
                                    <th class="text-right" style="border: 1px solid #000000;">Packing Style</th>
                                    <th class="text-right" style="border: 1px solid #000000;">Packing Qty</th>
                                    <th class="text-right" style="border: 1px solid #000000;">Total Output Qty</th>
                                </tr>
                            </thead>
                            <tbody class="invoice_tbody">
                                <tr t-foreach="o.grid_id" t-as="l">
                                    <td style="border: 1px solid #000000;">
                                        <span t-esc="l_index+1"/>
                                    </td>
                                    <td style="border: 1px solid #000000;" class="text-right">
                                        <span t-field="l.product_id"/>
                                    </td >
                                    <td style="border: 1px solid #000000;" class="text-right">
                                        <span t-field="l.uom_id"/>
                                    </td>
                                    <td style="border: 1px solid #000000;" class="text-right">
                                        <span t-field="l.specification_id"/>
                                    </td>
                                    <td style="border: 1px solid #000000;" class="text-right">
                                        <span t-field="l.packing_style" t-esc="'%.3f'% l.packing_style"/>
                                    </td>
                                    <td style="border: 1px solid #000000;" class="text-right">
                                        <span t-field="l.packing_qty" t-esc="'%.3f'% l.packing_qty"/>
                                    </td>
                                    <td style="border: 1px solid #000000;" class="text-right">
                                        <span t-field="l.total_output_qty" t-esc="'%.3f'% l.total_output_qty"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>                          
                            
                        <table style="width: 235mm;border:1px solid black;">
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td style="border-bottom: 1px solid #000000;border-top: 1px solid #000000;margin-top:1px;margin-left:1px;margin-right:1px;"><h5><strong>Prepared By:</strong></h5><br></br><span class="inline" t-field="o.prepared_by"/></td>
                            <td style="border-bottom: 1px solid #000000;border-top: 1px solid #000000;margin-top:1px;margin-left:1px;margin-right:1px;"><h5><strong>Store Incharge:</strong></h5><br></br><span class="inline" t-field="o.store_incharge"/></td>
                        <td style="border-bottom: 1px solid #000000;border-top: 1px solid #000000;margin-top:1px;margin-left:1px;margin-right:1px;"><h5><strong>Approved By:</strong></h5><br></br><span class="inline" t-field="o.approved_by"/></td>
                            </tr>
                        </table>
                            
                        </div>
                    </div>
                </div>
            </t>

            <t t-name="report.external_layout_footer">
                <div class="footer">
                        <div class="text-center" >
                        <ul class="list-inline">
                            <li align="left"><b>Doc No:</b>PPPL - PRD -F - 001</li>
                            <li align="center"><b>Rev. No.:</b><span class="inline" t-field="o.rev_no"/></li>
                            <li align="right"><b>Date:</b><span class="inline" t-field="o.date"/></li>
                        </ul>
                    </div>
                </div>
            </t>    
        </template>
        
               
        <template id="report_production_transfernote">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="prakruti.report_production_transfernote_document" />
                </t>
            </t>
        </template>

    </data>
</openerp>
