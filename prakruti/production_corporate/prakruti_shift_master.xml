<?xml version="1.0" encoding="utf-8"  ?>
<openerp>
<data>
        <!-- Search view for Shift Master      -->
            <record model="ir.ui.view" id="view_prakruti_shift_master_search">
                <field name="name">prakruti.shift_master.search</field>
                <field name="model">prakruti.shift_master</field>
                <field name="arch" type="xml">
                    <search string="Product Wise Search">
                        <field name ="company_id" />
                        <field name ="name" />
                        <field name ="shift_starttime"/>
                        <field name ="shift_endtime" />
                    </search>
                </field>
            </record>
            
            <!-- Tree view for Shift Master             -->
            <record model="ir.ui.view" id="view_prakruti_shift_master_tree">
                <field name="name">Shift Master</field>
                <field name="model">prakruti.shift_master</field>
                <field name="arch" type="xml">
                    <tree string="Shift Master" >
                        <field name ="company_id"/>
                        <field name ="name" />
                        <field name ="shift_starttime"/>
                        <field name ="shift_endtime" />
                    </tree>
                </field>
            </record>  
        <!-- Form view for Shift Master             -->
            <record model="ir.ui.view" id="view_prakruti_shift_master_form">
            <field name="name">Shift Master</field>
            <field name="model">prakruti.shift_master</field>
            <field name="arch" type="xml">
                <form string="Shift Master" >
                    <sheet>
                        <group>
                            <field name ="company_id" style="width:25%%" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                            <field name ="name"  style="width:25%%" on_change="onchange_check_name(name)"/>
                            <field name ="shift_starttime"  style="width:45%%"/>
                            <field name ="shift_endtime"  style="width:45%%"/>
                        </group>
                    </sheet>
                </form>
            </field>
            </record>
            
        <!-- Pivot for Shift Master             -->
            <record model="ir.ui.view" id="view_prakruti_shift_master_pivot">
                <field name="name">prakruti.shift_master.pivot</field>
                <field name="model">prakruti.shift_master</field>
                <field name="arch" type="xml">
                    <pivot string=" Shift Master" display_quantity="True">
                        <field name="name" type="row"/>
                    </pivot>
                </field>
            </record> 
            <!--Action for Shift Master  -->
            <record model="ir.actions.act_window" id="prakruti_shift_master_action">
                <field name="name">Shift Master</field>
                <field name="res_model">prakruti.shift_master</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form,pivot</field>
            </record>


       
        <menuitem id="prakruti_shift_master_sub_menu" 
                  name="Manage Shift " 
                  action="prakruti_shift_master_action" 
                  sequence="5"
                  parent="prakruti_production_quality_analysis_parent_menu" groups="group_prakruti_shift_master_read_only,group_prakruti_shift_master_edit,group_prakruti_shift_master_create,group_prakruti_shift_master_delete"/>
  
</data>
</openerp>
            
                        