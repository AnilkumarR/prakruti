<?xml version="1.0" encoding="utf-8"  ?>
<openerp>
 <data>
        <!--Search view for Main Plant         -->
        <record model="ir.ui.view" id="view_prakruti_main_plant_search">
            <field name="name">prakruti.main_plant.search</field>
            <field name="model">prakruti.main_plant</field>
            <field name="arch" type="xml">
                <search string="Product Wise Search">
                    <field name ="plant_name"/>
                    <field name ="plant_code" />
                    <field name ="company_id" />
                    <field name ="description" />
                </search>
            </field>
        </record>
        
        <!-- Form view for Main Plant         -->
        <record model="ir.ui.view" id="view_prakruti_main_plant_form">
            <field name="name">Main Plant</field>
            <field name="model">prakruti.main_plant</field>
            <field name="arch" type="xml">
                <form string="Main Plant" >
                    <sheet>
                        <group>
                            <field name ="plant_name" style="width:40%%" on_change="onchange_check_name(plant_name)"/>
                            <field name ="plant_code" style="width:40%%" on_change="onchange_check_code(plant_code)"/>
                            <field name ="company_id"  style="width:40%%" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                            <field name ="description"  style="width:40%%"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Tree view for Main Plant         -->
        <record model="ir.ui.view" id="view_prakruti_main_plant_tree">
            <field name="name">Main Plant</field>
            <field name="model">prakruti.main_plant</field>
            <field name="arch" type="xml">
                <tree string="Main Plant" >
                    <field name ="plant_name"/>
                    <field name ="plant_code" />
                    <field name ="company_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                    <field name ="description" />
                </tree>
            </field>
        </record>  
        
        
        <!-- pivot for Main Plant         -->
        <record model="ir.ui.view" id="view_prakruti_main_plant_pivot">
            <field name="name">prakruti.main_plant.pivot</field>
            <field name="model">prakruti.main_plant</field>
            <field name="arch" type="xml">
                <pivot string=" Main Plant " display_quantity="True">
                    <field name="company_id" type="row"/>
                    <field name ="plant_name" />
                </pivot>
            </field>
        </record>
       <!--     Action for Main Plant      -->
        <record model="ir.actions.act_window" id="prakruti_main_plant_action">
            <field name="name">Main Plant</field>
            <field name="res_model">prakruti.main_plant</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot</field>
        </record>
        
        <menuitem name="Production Master" 
                  id="prakruti_production_quality_analysis_parent_menu" 
                  parent="prakruti_production_slip_main_menu" 
                  sequence="2" />
       
        <menuitem id="prakruti_production_main_plant_sub_menu" 
                  name="Manage Main Plant" 
                  action="prakruti_main_plant_action" 
                  sequence="1"
                  parent="prakruti_production_quality_analysis_parent_menu" groups="group_prakruti_main_plant_read_only,group_prakruti_main_plant_edit,group_prakruti_main_plant_create,group_prakruti_main_plant_delete"  />
        
</data>  
</openerp>
            
                        