<?xml version="1.0" encoding="utf-8"  ?>
<openerp>
 <data>
    <!--Search view for Extraction Changes       -->
        <record model="ir.ui.view" id="view_prakruti_extraction_changes_search">
            <field name="name">prakruti.extraction_changes.search</field>
            <field name="model">prakruti.extraction_changes</field>
            <field name="arch" type="xml">
                <search string="Product Wise Search">
                    <field name ="company_id" />
                    <field name ="extraction_name" />
                </search>
            </field>
        </record>
        <!-- Form view for Extraction Changes      -->
        <record model="ir.ui.view" id="view_prakruti_extraction_changes_form">
            <field name="name">Extraction Changes</field>
            <field name="model">prakruti.extraction_changes</field>
            <field name="arch" type="xml">
                <form string="Extraction Changes" >
                    <sheet>           
                        <group>
                            <field name ="company_id" style="width:45%%" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                            <field name ="extraction_name" style="width:45%%" on_change="onchange_check_extraction_name(extraction_name)"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!--Tree view for Extraction Changes          -->
        <record model="ir.ui.view" id="view_prakruti_extraction_changes_tree">
            <field name="name">Extraction Changes</field>
            <field name="model">prakruti.extraction_changes</field>
            <field name="arch" type="xml">
                <tree string="Extraction Changes" editable="top">
                    <field name ="company_id" />
                    <field name ="extraction_name" on_change="onchange_check_extraction_name(extraction_name)"/>
                </tree>
            </field>
        </record> 
        
    <!--  Pivot for Extraction Changes        -->
        <record model="ir.ui.view" id="view_prakruti_extraction_changes_pivot">
            <field name="name">prakruti.extraction_changes.pivot</field>
            <field name="model">prakruti.extraction_changes</field>
            <field name="arch" type="xml">
                <pivot string=" Extraction Changes " display_quantity="True">
                    <field name="extraction_name" type="row"/>
                </pivot>
            </field>
        </record>
        
        
    <!-- Action for Extraction Changes         -->
        <record model="ir.actions.act_window" id="prakruti_extraction_changes_action">
            <field name="name">Extraction Changes</field>
            <field name="res_model">prakruti.extraction_changes</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot</field>
        </record>

       
        <menuitem id="prakruti_extraction_changes_sub_menu" 
                  name="Manage Extraction Charges" 
                  action="prakruti_extraction_changes_action" 
                  sequence="14"
                  parent="prakruti_production_quality_analysis_parent_menu" groups="group_prakruti_extraction_changes_read_only,group_prakruti_extraction_changes_edit,group_prakruti_extraction_changes_create,group_prakruti_extraction_changes_delete"/>
  
</data>
</openerp>
            
                        