<?xml version="1.0" encoding="utf-8"  ?>
<openerp>
<data>
            <!--Search view for Shift Assignment  -->
            <record model="ir.ui.view" id="view_prakruti_shift_assignment_search">
                <field name="name">prakruti.shift_assignment.search</field>
                <field name="model">prakruti.shift_assignment</field>
                <field name="arch" type="xml">
                    <search string="Product Wise Search">
                        <field name ="name"/>
                        <field name ="effective_date"/>
                    </search>
                </field>
            </record>
            
        <!--  Tree view for Shift Assignment            -->
            <record model="ir.ui.view" id="view_prakruti_shift_assignment_tree">
                <field name="name">Shift Assignment</field>
                <field name="model">prakruti.shift_assignment</field>
                <field name="arch" type="xml">
                    <tree string="Shift Assignment" >
                   `     <field name ="company_id"  />
                        <field name ="name"/>
                        <field name ="effective_date"/>
                    </tree>
                </field>
            </record> 
            
        <!--  Form view for Shift Assignment            -->
            <record model="ir.ui.view" id="view_prakruti_shift_assignment_form">
            <field name="name">Shift Assignment</field>
            <field name="model">prakruti.shift_assignment</field>
            <field name="arch" type="xml">
                <form string="Shift Assignment" >
                    <sheet>
                        <group>
                            <field name ="company_id" style="width:45%%"  options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                            <field name ="name"  style="width:45%%"/>
                            <field name ="effective_date"  style="width:45%%"/>
                        </group>
                    </sheet>
                </form>
            </field>
            </record>
            
            <!--   Pivot view for Shift Assignment           -->
            <record model="ir.ui.view" id="view_prakruti_shift_assignment_pivot">
                <field name="name">prakruti.shift_assignment.pivot</field>
                <field name="model">prakruti.shift_assignment</field>
                <field name="arch" type="xml">
                    <pivot string=" Shift Assignment" display_quantity="True">
                        <field name="name" type="row"/>
                    </pivot>
                </field>
            </record>  
        <!--Action for Shift Assignment  -->
            <record model="ir.actions.act_window" id="prakruti_shift_assignment_action">
                <field name="name">Shift Assignment</field>
                <field name="res_model">prakruti.shift_assignment</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form,pivot</field>
            </record>


       
        <menuitem id="prakruti_shift_assignment_sub_sub_menu" 
                  name="Manage Shift Assignment" 
                  action="prakruti_shift_assignment_action" 
                  sequence="14"
                  parent="prakruti_production_quality_analysis_parent_menu" groups="group_prakruti_shift_assignment_read_only,group_prakruti_shift_assignment_edit,group_prakruti_shift_assignment_create,group_prakruti_shift_assignment_delete"/>
  
</data>
</openerp>
            
                        