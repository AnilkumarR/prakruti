<?xml version="1.0" encoding="utf-8"  ?>
<openerp>
 <data>
        <!-- Search view for Mesh Master         -->
        <record model="ir.ui.view" id="view_prakruti_mesh_master_search">
            <field name="name">prakruti.mesh_master.search</field>
            <field name="model">prakruti.mesh_master</field>
            <field name="arch" type="xml">
                <search string="Product Wise Search">
                    <field name ="company_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                    <field name ="subplant_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" />
                    <field name ="mesh_size" />
                </search>
            </field>
        </record>
        
        <!-- Tree view for Mesh Master       -->
        <record model="ir.ui.view" id="view_prakruti_mesh_master_tree">
                <field name="name">Mesh Master</field>
                <field name="model">prakruti.mesh_master</field>
                <field name="arch" type="xml">
                    <tree string="Mesh Master" editable="top" >
                        <field name ="company_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                        <field name ="subplant_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" />
                        <field name ="mesh_size" />
                    </tree>
                </field>
            </record>  
        <!--Form view for Mesh Master  -->
        <record model="ir.ui.view" id="view_prakruti_mesh_master_form">
            <field name="name">Mesh Master</field>
            <field name="model">prakruti.mesh_master</field>
            <field name="arch" type="xml">
                <form string="Mesh Master" >
                    <sheet>
                        <group >
                            <field name ="company_id"  style="width:25%%" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                            <field name ="subplant_id"  style="width:25%%" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                            <field name ="mesh_size" style="width:125%%"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record> 
        
        <!-- Pivot for  Mesh Master         -->
        <record model="ir.ui.view" id="view_prakruti_mesh_master_pivot">
                <field name="name">prakruti.mesh_master.pivot</field>
                <field name="model">prakruti.mesh_master</field>
                <field name="arch" type="xml">
                    <pivot string=" Mesh Master" display_quantity="True">
                        <field name="subplant_id" type="row"/>
                    </pivot>
                </field>
        </record>
        <!--Action for  Mesh Master              -->
        <record model="ir.actions.act_window" id="prakruti_mesh_master_action">
                <field name="name">Mesh Master</field>
                <field name="res_model">prakruti.mesh_master</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form,pivot</field>
        </record>
    

       
        <menuitem id="prakruti_mesh_master_sub_menu" 
                  name="Manage Mesh" action="prakruti_mesh_master_action" 
                  sequence="4"
                  parent="prakruti_production_quality_analysis_parent_menu"
                  groups="group_prakruti_mesh_master_read_only,group_prakruti_mesh_master_edit,group_prakruti_mesh_master_create,group_prakruti_mesh_master_delete"/>
</data>
</openerp>
            
                        