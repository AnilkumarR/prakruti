<?xml version="1.0" encoding="utf-8"  ?>
<openerp>
 <data>
     
        <!--Search view for Stage       -->
        <record model="ir.ui.view" id="view_prakruti_stage_search">
            <field name="name">prakruti.stage.search</field>
            <field name="model">prakruti.stage</field>
            <field name="arch" type="xml">
                <search string="Product Wise Search">
                    <field name ="company_id"  />
                    <field name="stage_name" />
                    <field name="stage_code"/>
                </search>
            </field>
        </record>
        
        <!-- Tree view for Stage         -->
        <record model="ir.ui.view" id="view_prakruti_stage_tree">
            <field name="name">Stage</field>
            <field name="model">prakruti.stage</field>
            <field name="arch" type="xml">
                <tree string="Stage" editable="top">
                    <field name ="company_id" />
                    <field name ="stage_name" on_change="onchange_check_stage_name(stage_name)"/>
                    <field name ="stage_code" on_change="onchange_check_stage_code(stage_code)"/>
                </tree>
            </field>
        </record> 
        
        <!--Form view for Stage  -->
        <record model="ir.ui.view" id="view_prakruti_stage_form">
        <field name="name">Stage</field>
        <field name="model">prakruti.stage</field>
        <field name="arch" type="xml">
            <form string="Stage" >
                <sheet>
                    <group>
                        <field name ="company_id" style="width:25%%" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                        <field name ="stage_name" style="width:45%%" on_change="onchange_check_stage_name(stage_name)"/>
                        <field name ="stage_code" style="width:45%%" on_change="onchange_check_stage_code(stage_code)"/>
                    </group>
                </sheet>
            </form>
        </field>
        </record>
        
        <!--Pivot for Stage          -->
        <record model="ir.ui.view" id="view_prakruti_stage_pivot">
            <field name="name">prakruti.stage.pivot</field>
            <field name="model">prakruti.stage</field>
            <field name="arch" type="xml">
                <pivot string=" Stage" display_quantity="True">
                    <field name="stage_name" type="row"/>
                    <field name="stage_code"/>
                </pivot>
            </field>
        </record>
        <!--Action for Stage  -->
        <record model="ir.actions.act_window" id="prakruti_stage_action">
            <field name="name">Stage</field>
            <field name="res_model">prakruti.stage</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot</field>
        </record>


       
        <menuitem id="prakruti_stage_sub_menu" 
                  name="Manage Stage" 
                  action="prakruti_stage_action" 
                  sequence="15"
                  parent="prakruti_production_quality_analysis_parent_menu" groups="group_prakruti_stage_read_only,group_prakruti_stage_edit,group_prakruti_stage_create,group_prakruti_stage_delete"/>
  
</data>
</openerp>
            
                        