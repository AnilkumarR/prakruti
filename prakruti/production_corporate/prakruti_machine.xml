<?xml version="1.0" encoding="utf-8"  ?>
<openerp>
 <data>
     
     
        <!-- Search view for Machine      -->
        <record model="ir.ui.view" id="view_prakruti_machine_search">
            <field name="name">prakruti.machine.search</field>
            <field name="model">prakruti.machine</field>
            <field name="arch" type="xml">
                <search string="Product Wise Search">
                    <field name ="company_id"/>
                    <field name ="name" />
                    <field name ="machine_code"/>
                    <field name ="description" />
                </search>
            </field>
        </record>
        
        <!--  Form view for Machine       -->
        <record model="ir.ui.view" id="view_prakruti_machine_form">
            <field name="name">Machine</field>
            <field name="model">prakruti.machine</field>
            <field name="arch" type="xml">
            <form string="Machine" >
                <sheet>
                    <group>
                        <field name ="company_id" style="width:45%%" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                        <field name ="name" style="width:45%%" on_change="onchange_check_machine_name(name)"/>
                        <field name ="machine_code" style="width:45%%" on_change="onchange_check_machine_code(machine_code)"/>
                        <field name ="description" style="width:45%%"/>
                    </group>
                </sheet>
            </form>
            </field>
        </record>
            
        <!-- Tree view for Machine             -->
        <record model="ir.ui.view" id="view_prakruti_machine_tree">
            <field name="name">Machine</field>
            <field name="model">prakruti.machine</field>
            <field name="arch" type="xml">
                <tree string="Machine" >
                    <field name ="company_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                    <field name ="name" />
                    <field name ="machine_code"/>
                    <field name ="description" />
                </tree>
            </field>
        </record>
        
        <!--Pivot for Machine          -->
        <record model="ir.ui.view" id="view_prakruti_machine_pivot">
            <field name="name">prakruti.machine.pivot</field>
            <field name="model">prakruti.machine</field>
            <field name="arch" type="xml">
                <pivot string=" Machine " display_quantity="True">
                    <field name="name" type="row"/>
                    <field name ="machine_code"/>
                </pivot>
            </field>
        </record>   
        <!--Action for Machine          -->
        <record model="ir.actions.act_window" id="prakruti_machine_action">
                <field name="name">Machine</field>
                <field name="res_model">prakruti.machine</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form,pivot</field>
        </record>
        

       
        <menuitem id="prakruti_machine_view" 
                  name="Manage Machine" 
                  action="prakruti_machine_action" 
                  sequence="17"
                  parent="prakruti_production_quality_analysis_parent_menu" groups="group_prakruti_machine_read_only,group_prakruti_machine_edit,group_prakruti_machine_create,group_prakruti_machine_delete"/>
  
</data>
</openerp>
            
                        