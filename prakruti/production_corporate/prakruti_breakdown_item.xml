<?xml version="1.0" encoding="utf-8"  ?>
<openerp>
 <data>
        <!-- Search view for Breakdown Item      -->
        <record model="ir.ui.view" id="view_prakruti_breakdown_item_search">
            <field name="name">prakruti.breakdown_item.search</field>
            <field name="model">prakruti.breakdown_item</field>
            <field name="arch" type="xml">
                <search string="Product Wise Search">
                    <field name ="company_id"/>
                    <field name ="name" />
                </search>
            </field>
        </record>
        
        <!-- Form view for Breakdown Item      -->
        <record model="ir.ui.view" id="view_prakruti_breakdown_item_form">
            <field name="name">Breakdown Item</field>
            <field name="model">prakruti.breakdown_item</field>
            <field name="arch" type="xml">
                <form string="Breakdown Item" >
                <sheet>
                    <group colspan="4" col="4">
                        <field name ="company_id" style="width:45%%" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                        <field name ="name" style="width:45%%" on_change="onchange_check_name(name)"/>
                    </group>
                </sheet>
                </form>
            </field>
        </record>
        
        <!--Tree view for Breakdown Item          -->
        <record model="ir.ui.view" id="view_prakruti_breakdown_item_tree">
            <field name="name">Breakdown Item</field>
            <field name="model">prakruti.breakdown_item</field>
            <field name="arch" type="xml">
                <tree string="Breakdown Item" editable="top">
                    <field name ="company_id" />
                    <field name ="name" on_change="onchange_check_name(name)"/>
                </tree>
            </field>
        </record> 
        
    <!--   Pivot for Breakdown Item -->
        <record model="ir.ui.view" id="view_prakruti_breakdown_item_pivot">
            <field name="name">prakruti.breakdown_item.pivot</field>
            <field name="model">prakruti.breakdown_item</field>
            <field name="arch" type="xml">
                <pivot string=" Breakdown Item " display_quantity="True">
                    <field name="name" type="row"/>
                </pivot>
            </field>
        </record>
        
        <!--Action for Breakdown Item          -->
        <record model="ir.actions.act_window" id="prakruti_breakdown_item_action">
            <field name="name">Breakdown Item</field>
            <field name="res_model">prakruti.breakdown_item</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot</field>
        </record>
        

       
        <menuitem id="prakruti_breakdown_item_sub_menu" 
                  name="Manage Breakdown Item" 
                  action="prakruti_breakdown_item_action" 
                  sequence="9"
                  parent="prakruti_production_quality_analysis_parent_menu" groups="group_prakruti_breakdown_item_read_only,group_prakruti_breakdown_item_edit,group_prakruti_breakdown_item_create,group_prakruti_breakdown_item_delete"/>
  
</data>
</openerp>
            
                        