<?xml version="1.0" encoding="utf-8"  ?>
<openerp>
 <data>
        <!--Search view for Process Order  -->
        <record model="ir.ui.view" id="view_prakruti_process_order_search">
            <field name="name">prakruti.process_order.search</field>
            <field name="model">prakruti.process_order</field>
            <field name="arch" type="xml">
                <search string="Product Wise Search">
                    <field name ="company_id" />
                    <field name ="order_no"  />
                </search>
            </field>
        </record>
        
        <!-- Tree view for Process Order         -->
        <record model="ir.ui.view" id="view_prakruti_process_order_tree">
            <field name="name">Process Order</field>
            <field name="model">prakruti.process_order</field>
            <field name="arch" type="xml">
                <tree string="Process Order" editable="top">
                    <field name ="company_id"/>
                    <field name ="order_no" on_change="onchange_process_order_name(order_no)"/>
                </tree>
            </field>
        </record>  
        
        <!--Form view for Process Order          -->
        <record model="ir.ui.view" id="view_prakruti_process_order_form">
        <field name="name">Process Order</field>
        <field name="model">prakruti.process_order</field>
        <field name="arch" type="xml">
            <form string="Process Order" >
                <sheet>
                    <group>
                        <field name ="company_id" style="width:45%%" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                        <field name ="order_no" style="width:45%%" on_change="onchange_process_order_name(order_no)"/>
                    </group>
                </sheet>
            </form>
        </field>
        </record>
        
        <!--Pivot for Process Order          -->
        <record model="ir.ui.view" id="view_prakruti_process_order_pivot">
            <field name="name">prakruti.process_order.pivot</field>
            <field name="model">prakruti.process_order</field>
            <field name="arch" type="xml">
                <pivot string=" Process Order" display_quantity="True">
                    <field name="order_no" type="row"/>
                </pivot>
            </field>
        </record> 
        
        <!-- Action for Process Order -->
        <record model="ir.actions.act_window" id="prakruti_process_order_action">
            <field name="name">Process Order</field>
            <field name="res_model">prakruti.process_order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot</field>
        </record>
        

       
        <menuitem id="prakruti_process_order_sub_menu" name="Manage Process Order" action="prakruti_process_order_action" sequence="16"
                  parent="prakruti_production_quality_analysis_parent_menu" groups="group_prakruti_process_order_read_only,group_prakruti_process_order_create,group_prakruti_process_order_edit,group_prakruti_process_order_delete"/>
  
</data>
</openerp>
            
                        