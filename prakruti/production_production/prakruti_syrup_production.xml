<data> 
    <!-- Search view for Syrup Production-->
        <record model="ir.ui.view" id="view_prakruti_syrup_production_search">
            <field name="name">prakruti.syrup_production.search</field>
            <field name="model">prakruti.syrup_production</field>
            <field name="arch" type="xml">
                <search string="Product Wise Search">
                    <field name ="subplant_id"/>
                    <field name ="batch_id"/>
                    <field name ="batch_size" />
                    <field name ='status'/>
                </search>
            </field>
        </record>
            
        <!-- FORM VIEW PRODUCTION -->
        <record model="ir.ui.view" id="view_prakruti_syrup_production_form">
        <field name="name">Production Syrup</field>
        <field name="model">prakruti.syrup_production</field>
        <field name="arch" type="xml">
            <form string="Production Syrup" >
                <header>
                    <field name='status' widget='statusbar'/>
                    <field name ='revise_status' widget='statusbar' attrs="{'invisible':[('is_revise', '=', False)]}"/>
                </header>
                <button name="allocate_batch_no" string="Allocate the Batch" type="object" attrs="{'invisible':[('status', '=', 'batch_alloted')]}" class="oe_highlight"/>
                <group colspan="4" col="4">
                    <field name ="subplant_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" domain="['&amp;',('plant_type','=','syrup'),('plant_allocated_flag','=',0)]" attrs="{'readonly':[('status', 'in', ('batch_alloted')),('revise_status', 'not in', ('revise_syrup'))]}"/>
                    <field name ="batch_id"  on_change="onchange_batch_id(batch_id)" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" domain="['&amp;',('batch_allocated_flag','=',0),('subplant_id','=',subplant_id)]" attrs="{'readonly':[('status', 'in', ('batch_alloted')),('revise_status', 'not in', ('revise_syrup'))]}"/>
                    <field name ="batch_size" attrs="{'readonly':[('status', 'in', ('batch_alloted')),('revise_status', 'not in', ('revise_syrup'))]}"/>
                    <field name ="date" attrs="{'readonly':[('status', 'in', ('batch_alloted')),('revise_status', 'not in', ('revise_syrup'))]}"/>
                    <field name ="batch_allocation_date" attrs="{'readonly':[('status', 'in', ('batch_alloted')),('revise_status', 'not in', ('revise_syrup'))]}"/>
                    <field name ="batch_end_date" attrs="{'readonly':[('status', 'in', ('batch_alloted')),('revise_status', 'not in', ('revise_syrup'))]}"/>
                    <field name ="created_by" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                    <field name ="company_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" />
                    <field name ="total_output_yeild" invisible="1"/>
                    <field name ="total_assay_output" invisible="1"/>
                    <field name ="available_qty" invisible="1"/>
                    <field name ="packing" invisible="True"/>
                    <field name ="pulverisation" invisible="True"/>
                    <field name ="extraction_new" invisible="True"/>
                    <field name ="other_ingredient_addition" invisible="True"/>
                    <field name ="extract_solution" invisible="True"/>
                    <field name ="soak_raw_material" invisible="True"/>
                    <field name ="autoclave" invisible="True"/>
                    <field name ="addition_preservative" invisible="True"/>
                    <field name ="preparation_syrup" invisible="True"/>
                    <field name ="ph_control_buffer" invisible="True" />
                    <field name ="solvent_name" invisible="True"/>
                    <field name ="filling" invisible="True"/>
                    <field name ="coding" invisible="True"/>
                    <field name ="filtration" invisible="True"/>
                    <field name ='production_name' invisible="True"/>
                    <field name ="bmr_no" invisible="True"/> 
                    <field name ="flag_display_product" invisible="True"/>                             
                    <field name ="flag_delete_product" invisible="True"/>
                </group>
                        
                <separator string ='Pulverization' attrs="{'invisible':[('pulverisation', '=', 'no')]}"/>
                <field name='pulverization_production_syrup_id' attrs="{'invisible':[('pulverisation', '=', 'no')]}"/>
                    <group class="oe_subtotal_footer oe_right">
                        <field name ="total_weight_before" attrs="{'invisible':[('pulverisation', '=', 'no')]}"/>
                        <field name ="total_weight_after" attrs="{'invisible':[('pulverisation', '=', 'no')]}" />
                    </group>
                
                <separator string ='Preparation Of Extract Solution' attrs="{'invisible':[('extract_solution', '=', 'no')]}"/>
                <field name='extract_solution_syrup_id' attrs="{'invisible':[('extract_solution', '=', 'no')]}"/>
                    <group class="oe_subtotal_footer oe_right">
                        <field name ="total_volume_before_pe" attrs="{'invisible':[('extract_solution', '=', 'no')]}"/>
                        <field name ="total_volume_after_pe" attrs="{'invisible':[('extract_solution', '=', 'no')]}" />
                    </group>
                
                <separator string ='Soaking Of Raw Material' attrs="{'invisible':[('soak_raw_material', '=', 'no')]}"/>
                <field name='soak_raw_material_syrup_id' attrs="{'invisible':[('soak_raw_material', '=', 'no')]}"/>

                <separator string =' Extraction'   attrs="{'invisible':[('extraction_new', '=', 'no')]}"/>
                <field name='extraction_syrup_id'  attrs="{'invisible':[('extraction_new', '=', 'no')]}"/>
                    <group class="oe_subtotal_footer oe_right">
                        <field name ="total_weight_before_ex" attrs="{'invisible':[('extraction_new', '=', 'no')]}"/>
                    </group>
                
                <separator string =' Filtration'  attrs="{'invisible':[('filtration', '=', 'no')]}"/>
                <field name='filtration_syrup_id'  attrs="{'invisible':[('filtration', '=', 'no')]}"/>
                
                <separator string =' Autoclave'  attrs="{'invisible':[('autoclave', '=', 'no')]}"/>
                <field name='autoclave_syrup_id'  attrs="{'invisible':[('autoclave', '=', 'no')]}"/>
                
                <separator string =' Addition Of Preservative'  attrs="{'invisible':[('addition_preservative', '=', 'no')]}"/>
                <field name='addition_preservative_syrup_id'  attrs="{'invisible':[('addition_preservative', '=', 'no')]}"/>
                
                <separator string ='Preparation Of Syrup'  attrs="{'invisible':[('preparation_syrup', '=', 'no')]}"/>
                <field name='syrup_preparation_id'  attrs="{'invisible':[('preparation_syrup', '=', 'no')]}"/>
                    <group class="oe_subtotal_footer oe_right">
                        <field name ="total_volume_before_ps" attrs="{'invisible':[('preparation_syrup', '=', 'no')]}"/>
                        <field name ="total_volume_after_ps" attrs="{'invisible':[('preparation_syrup', '=', 'no')]}" />
                    </group>
                
                <separator string ='Other Ingredient Addition'  attrs="{'invisible':[('other_ingredient_addition', '=', 'no')]}"/>
                <field name='other_ingredient_addition_syrup_id'  attrs="{'invisible':[('other_ingredient_addition', '=', 'no')]}"/>
                
                <separator string ='Ph Control Buffer Action' attrs="{'invisible':[('ph_control_buffer', '=', 'no')]}"/>
                <field name='ph_control_buffer_action_syrup_id'  attrs="{'invisible':[('ph_control_buffer', '=', 'no')]}"/>
                
                <separator string ='Volume Make Up'  attrs="{'invisible':[('solvent_name', '=', 'no')]}"/>
                <field name='solvent_name_syrup_id'  attrs="{'invisible':[('solvent_name', '=', 'no')]}"/>
                    <group class="oe_subtotal_footer oe_right">
                        <field name ="total_volume_before_vu" attrs="{'invisible':[('solvent_name', '=', 'no')]}"/>
                        <field name ="total_volume_after_vu" attrs="{'invisible':[('solvent_name', '=', 'no')]}" />
                    </group>
                    
                <separator string ='Filling'  attrs="{'invisible':[('filling', '=', 'no')]}"/>
                <field name='filling_syrup_id'  attrs="{'invisible':[('filling', '=', 'no')]}"/>
                
                <separator string ='Coding'  attrs="{'invisible':[('coding', '=', 'no')]}"/>
                <field name='coding_syrup_id'  attrs="{'invisible':[('coding', '=', 'no')]}"/>
                
                <separator string ='Packing'  attrs="{'invisible':[('packing', '=', 'no')]}"/>
                <field name='packing_syrup_id'  attrs="{'invisible':[('packing', '=', 'no')]}"/>
                
                <separator string ='Break Down' />
                <field name='breakdown_production_id'/>
                
                <separator string ='Remarks'/>
                <field name='remarks'/>
                    
                    
                <button name="action_list_products"  string="List" type="object" attrs="{'invisible':[('flag_display_product','=',1),('flag_delete_product','=',0)]}"/>
                <button name="action_delete_products"  string="Delete" type="object" attrs="{'invisible':[('flag_delete_product','=',1),('flag_display_product','=',0)]}"/>
                <separator string ='Output Details'/>
                    <field name='assay_line' />
                <group colspan="4" col="4">
                    <button name="revise_syrup" string="Is Revision Required ?" type="object" class="oe_highlight" attrs="{'invisible':['|',('status', '!=', 'batch_alloted'),('revise_status', 'in', ('revise_syrup'))]}"/>                                         
                    <button name="revise_done" string="Revise Done" type="object" class="oe_highlight" attrs="{'invisible':[('revise_status', 'not in', ('revise_syrup'))]}"/>
                    <group colspan="4" col="4">
                        <field name ="revise_remarks" placeholder='Enter Revise Remarks Here...' attrs="{'invisible': [('is_revise', '=', False)]}"/>
                        <field name ="revise_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" attrs="{'invisible': [('is_revise', '=', False)]}"/>
                        <field name ="is_revise" attrs="{'invisible':[('is_revise', '=', False)]}"/>
                        <field name ="revise_no" attrs="{'invisible':[('is_revise', '=', False)]}"/>
                        <field name ="revise_remarks_update" />
                        <field name ="revise_flag" invisible="True"/>
                    </group>
                </group>
                    
            </form>
        </field>
    </record>
            
