<?xml version="1.0" encoding="utf-8"?>
<openerp>
 <data>
                <!-- Search view for Production Inward Note      -->
     
                <record model="ir.ui.view" id="view_prakruti_production_inward_search">
                    <field name="name">prakruti.production_inward.search</field>
                    <field name="model">prakruti.production_inward</field>
                    <field name="arch" type="xml">
                        <search string="Product Wise Search">
                            <field name="inward_no"/>
                            <field name="batch_no"/>
                            <field name="dept_from"/>
                            <field name="prepared_by"/>
                            <field name="store_incharge"/>
                            <field name="approved_by"/>
                            <field name= "state"/>
                        </search>
                    </field>
                </record>


                <!-- Tree view of  PTN Information -->
                <record model="ir.ui.view" id="view_prakruti_production_inward_tree">
                    <field name="name">prakruti.production_inward.tree</field>
                    <field name="model">prakruti.production_inward</field>
                    <field name="arch" type="xml">
                        <tree string="Production Inward Information" create= "false">
                            <field name="inward_no"/>
                            <field name="date"/>
                            <field name="batch_no"/>
                            <field name="dept_from"/>
                            <field name="prepared_by"/>
                            <field name="store_incharge"/>
                            <field name="approved_by"/>
                            <field name= "state"/>
                        </tree>
                    </field>
                </record>

                
                <!-- Form view for Production Inward Note                 -->
                <record model="ir.ui.view" id="view_prakruti_production_inward_form">
                    <field name="name">prakruti.production_inward.form</field>
                    <field name="model">prakruti.production_inward</field>
                    <field name="arch" type="xml">
                        <form string="Inward Information" create= "false">
                            <sheet>
                                <header position="inside">  
                                    <button name="action_to_qc"  string= "Send QC" type="object" attrs="{'invisible':[('state', 'in', ('qc_check','done','rejected','approved'))]}"/>
                                    <button name="inward_to_stock"  string= "Update" type="object" attrs="{'invisible':[('state', 'in', ('inward','qc_check','done'))]}"/>
                                    <field name= "state" widget='statusbar'/>
                                </header>
                                <group colspan="2" col='4'>
                                    <field name="inward_no" readonly="True"/>
                                    <field name="date" readonly="True"/>
                                    <field name="batch_no" readonly="True"/>
                                    <field name="dept_from" readonly="True"/>
                                    <field name="prepared_by" readonly="True"/>
                                    <field name="store_incharge" readonly="True"/>
                                    <field name="approved_by" readonly="True"/>
                                    <field name="location_id" options="{'no_create': True, 'no_create_edit' : True, 'no_open' : True}" />
                                    <field name="company_id" options="{'no_create': True, 'no_create_edit' : True, 'no_open' : True}" />
                                    <field name="formulation_type" attrs="{'invisible':[('batch_allocated_by', 'in', ('syrup','tablet','extraction'))]}"/>
                                    <field name="batch_allocated_by" invisible="1"/>
                                    </group>
                                <notebook colspan="2"> 
                                    <page  string="Product Details" create= "false">
                                        <field name='grid_id' attrs="{'readonly':[('state', 'in', ('qc_check','done','rejected','approved'))]}"/>
                                    </page>
                                </notebook>
                            </sheet>
                        </form>
                    </field>
                </record>

                    <!-- Tree view for Production Inward Note line -->
                    <record model="ir.ui.view" id="view_prakruti_production_inward_line_tree">
                    <field name="name">prakruti.production_inward_line.tree</field>
                    <field name="model">prakruti.production_inward_line</field>
                    <field name="arch" type="xml">
                        <tree string="Production Inward Line " editable='bottom'>
                            <field name="product_id" readonly="True"/>
                            <field name="uom_id" readonly="True"/>
                            <field name="description"/>
                            <field name="specification_id"  options="{'no_create': True, 'no_create_edit' : True}" domain="[('product_id','=',product_id)]"/>
                            <field name="accepted_qty" readonly="True"/>
                            <field name="rejected_qty" readonly="True"/>
                            <field name="packing_style"/>
                            <field name="packing_qty"/>
                            <field name="total_output_qty"/>
                            <field name="qc_status" />
                            <field name="remarks" />
                            <field name="main_id" invisible="True"/>
                        </tree>
                    </field>
                </record>
                
                <!-- Pivot for Production Inward Note -->
                <record model="ir.ui.view" id="view_prakruti_production_inward_pivot">
                    <field name="name">prakruti.production_inward.pivot</field>
                    <field name="model">prakruti.production_inward</field>
                    <field name="arch" type="xml">
                        <pivot string="Production Inward" display_quantity="True">
                            <field name="batch_no" type="row"/>
                        </pivot>
                    </field>
                </record>  



                <!-- Action for  store  request Information -->
                <record model="ir.actions.act_window" id="prakruti_production_inward_action">
                    <field name="name">Production Inward</field>
                    <field name="res_model">prakruti.production_inward</field>
                    <field name="view_type">form</field>
                    <field name="view_mode">tree,form,pivot</field>
                </record>


                <menuitem 
                    id="prakruti_inward_stores_sub_menu" 
                    name="Production Inward" 
                    parent="prakruti_stores_main_menu"  sequence="1"/>

                <menuitem name="Production Inward Note" 
                            id="prakruti_inward_stores_sub_menu_child"            
                            action="prakruti_production_inward_action" 
                            sequence="1"
                            parent="prakruti_inward_stores_sub_menu" groups="group_prakruti_production_inward_read_only,group_prakruti_production_inward_create,group_prakruti_production_inward_edit,group_prakruti_production_inward_delete"
                        />

        <!--==== END  store  request  Information ==== -->
   

</data>
</openerp>
