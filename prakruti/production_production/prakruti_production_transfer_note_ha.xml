<?xml version="1.0" encoding="utf-8"?>
<openerp>
 <data>
     
      <!-- Search for PTN HA Information -->
        <record model="ir.ui.view" id="view_prakruti_production_transfer_note_ha_search">
            <field name="name">prakruti.production_transfer_note_ha.search</field>
            <field name="model">prakruti.production_transfer_note_ha</field>
            <field name="arch" type="xml">
                <search string="Product Wise Search">
                    <field name="ptn_no"/>
                    <field name="batch_no"/>
                    <field name="checked_by"/>
                    <field name= "state" />
                </search>
            </field>
        </record>
    
     
        <!-- Tree view of  PTN HA Information -->
        <record model="ir.ui.view" id="view_prakruti_production_transfer_note_ha_tree">
            <field name="name">prakruti.production_transfer_note_ha.tree</field>
            <field name="model">prakruti.production_transfer_note_ha</field>
            <field name="arch" type="xml">
                <tree string=" Production Transfer Note" create= "false">
                    <field name="ptn_no"/>
                    <field name="date"/>
                    <field name="qc_date"/>
                    <field name="batch_no"/>
                    <field name="checked_by"/>
                    <field name="state" />
                    <field name="report_status" />
                </tree>
            </field>
        </record>
        
         <!-- Form view  for PTN HA Information -->
        <record model="ir.ui.view" id="view_prakruti_production_transfer_note_ha_form">
            <field name="name">prakruti.production_transfer_note_ha.form</field>
            <field name="model">prakruti.production_transfer_note_ha</field>
            <field name="arch" type="xml">
                <form string=" PTN Information" create= "false">
                     <sheet>
                        <header position="inside">  
                                <button name="action_to_inward" string= "Done to Inward" type="object" attrs="{'invisible':[('state','in',('approved','rejected'))]}" />
                                <field name= "state" widget='statusbar'/>
                       </header>
                        <group>
                            <group colspan="2" col='4'>
                                <field name="ptn_no"/>
                                <field name="date"/>
                                <field name="qc_date"/>
                                <field name="company_id" readonly="True" />
                                <field name="batch_no" readonly="True" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                                <field name= "report_status" />
                                <field name="checked_by" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" attrs="{'invisible':[('state','not in',('ha_check'))]}"/>
                                <field name="formulation_type" attrs="{'invisible':[('batch_allocated_by', 'in', ('syrup','tablet','extraction'))]}"/>
                                <field name="batch_allocated_by" invisible="1"/>
                             </group>
                           
                              <notebook colspan="2"> 
                                <page  string="Product Details" create= "false">
                                    <field name='grid_id' attrs="{'readonly':[('state','not in','ha_check')]}"/>
                                </page>
                               
                            </notebook>
                        </group>
                     </sheet>
                </form>
            </field>
        </record>
	
        
         <!-- Tree view for for PTN HA Line Information -->
         <record model="ir.ui.view" id="view_prakruti_production_transfer_note_ha_line_tree">
            <field name="name">prakruti.production_transfer_note_ha_line.tree</field>
            <field name="model">prakruti.production_transfer_note_ha_line</field>
            <field name="arch" type="xml">
                <tree string=" Production Transfer Note HA Line " editable='bottom' create= 'false'>
                    <field name="product_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                    <field name="uom_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                    <field name="description" />
                    <field name="specification_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" domain="[('product_id','=',product_id)]"/>
                    <field name="ar_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"  domain="[('specification_id','=',specification_id)]"/>
                    <field name="mrg_quantity"/>
                    <field name="accepted_qty" />
                    <field name="rejected_qty" />
                    <field name="qc_status" />
                    <field name="test_result"/>
                    <field name="remarks"/>
                    <field name="common_inward_line_id" invisible="True"/>
                    <field name="main_id" invisible="True"/>
                </tree>
            </field>
        </record>
        
         <!-- Pivot for PTN HA Information -->
     <record model="ir.ui.view" id="view_prakruti_production_transfer_note_ha_pivot">
            <field name="name">prakruti.production_transfer_note_ha.pivot</field>
            <field name="model">prakruti.production_transfer_note_ha</field>
            <field name="arch" type="xml">
                <pivot string="  PTN HA" display_quantity="True">
                    <field name="batch_no" type="row"/>
                </pivot>
            </field>
        </record>
        
        

        <!-- Action for PTN HA Information -->
        <record model="ir.actions.act_window" id="prakruti_production_transfer_note_ha_action">
            <field name="name"> PTN HA</field>
            <field name="res_model">prakruti.production_transfer_note_ha</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot</field>
        </record>
	
        
        <menuitem name="Production Inward HA" id="prakruti_production_transfer_note_ha_menu"
            action="prakruti_production_transfer_note_ha_action" sequence="2"
                  parent="prakruti.prakruti_production_quality_control_sub_menu" groups="group_prakruti_production_transfer_note_ha_read_only,group_prakruti_production_transfer_note_ha_create,group_prakruti_production_transfer_note_ha_edit,group_prakruti_production_transfer_note_ha_delete"
                />

        <!--==== END  store  request  Information ==== -->
   

</data>
</openerp>
