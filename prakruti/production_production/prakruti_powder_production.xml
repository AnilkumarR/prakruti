 <data>
     <!-- Search VIEW TABLET PRODUCTION -->
        <record model="ir.ui.view" id="view_prakruti_powder_production_search">
            <field name="name">prakruti.powder_production.search</field>
            <field name="model">prakruti.powder_production</field>
            <field name="arch" type="xml">
                <search string="Product Wise Search">
                    <field name ="subplant_id"/>
                    <field name ="batch_id"/>
                    <field name ="batch_size" />
                    <field name ='status'/>
                </search>
            </field>
        </record>
      <!-- FORM VIEW TABLET PRODUCTION -->
     <record model="ir.ui.view" id="view_prakruti_powder_production_form">
        <field name="name"> Formulation Production</field>
        <field name="model">prakruti.powder_production</field>
        <field name="arch" type="xml">
            <form string="Formulation Production" >
                <header>
                    <field name='status' widget='statusbar'/>
                    <field name ='revise_status' widget='statusbar' attrs="{'invisible':[('is_revise', '=', False)]}"/>
                </header>
                <button name="allocate_batch_no" string="Allocate the Batch" type="object"  attrs="{'invisible':[('status', '=', 'batch_alloted')]}" class="oe_highlight"/>
                <group colspan="4" col="4">
                    <field name ="subplant_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" domain="['&amp;',('plant_type','=','formulation'),('plant_allocated_flag','=',0)]" attrs="{'readonly':[('status', 'in', ('batch_alloted')),('revise_status', 'not in', ('revise_powder'))]}"/>
                    <field name ="batch_id"  on_change="onchange_batch_id(batch_id)" domain="['&amp;',('batch_allocated_flag','=',0),('subplant_id','=',subplant_id)]" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" attrs="{'readonly':[('status', 'in', ('batch_alloted')),('revise_status', 'not in', ('revise_powder'))]}"/>
                    <field name ="batch_size" attrs="{'readonly':[('status', 'in', ('batch_alloted')),('revise_status', 'not in', ('revise_powder'))]}"/>
                    <field name ="date" attrs="{'readonly':[('status', 'in', ('batch_alloted')),('revise_status', 'not in', ('revise_powder'))]}"/>
                    <field name ="batch_allocation_date" attrs="{'readonly':[('status', 'in', ('batch_alloted')),('revise_status', 'not in', ('revise_powder'))]}"/>
                    <field name ="batch_end_date" attrs="{'readonly':[('status', 'in', ('batch_alloted')),('revise_status', 'not in', ('revise_powder'))]}"/>
                    <field name ="created_by" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}"/>
                    <field name ="company_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" />
                    <field name ="formulation_type" />
                    <field name ="total_output_yeild" invisible="1"/>
                    <field name ="total_assay_output" invisible="1"/>
                    <field name ="available_qty" invisible="1"/>
                    <field name ="sieving" invisible="True"/>
                    <field name ="preparation_of_binder" invisible="True" />
                    <field name ="granulation" invisible="True" />
                    <field name ="semi_drying"  invisible="True"/>
                    <field name ="final_drying"  invisible="True"/>
                    <field name ="milling" invisible="True"/>
                    <field name ="api_addition" invisible="True" />
                    <field name ="blending" invisible="True" />
                    <field name ="compression" invisible="True" />
                    <field name ="tablet_coating"  invisible="True"/>
                    <field name ="coating" invisible="True" />
                    <field name ="inspection" invisible="True" />
                    <field name ="metal_inspection" invisible="True" />
                    <field name ="packing"  invisible="True"/>
                    <field name ='extract_solution_lotion' invisible="True" />
                    <field name ='addition_of_solution' invisible="True" />
                    <field name ='other_ingredient_addition_lotion' invisible="True"/>
                    <field name ='volume_make_up' invisible="True"/>
                    <field name ='filling_lotion' invisible="True"/>
                    <field name ='production_name' invisible="True"/>
                    <field name ="bmr_no" invisible="True"/>
                    <field name ="flag_display_product" invisible="True"/>                             
                    <field name ="flag_delete_product" invisible="True"/>
                </group>
                
                <separator string ='Sieving' attrs="{'invisible':['|',('sieving', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                <field name='powder_sieving_id' attrs="{'invisible':['|',('sieving', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                    <group class="oe_subtotal_footer oe_right">
                       <!-- <field name ="total_input_qty_si" attrs="{'invisible':[('sieving', '=', 'no')]}"/>
                        <field name ="total_output_qty_si" attrs="{'invisible':[('sieving', '=', 'no')]}" />-->
                    </group>
                
                <separator string ='Preparartion of Binder' attrs="{'invisible':['|',('preparation_of_binder', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                <field name='powder_binder_id' attrs="{'invisible':['|',('preparation_of_binder', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                
                <separator string ='Granulation' attrs="{'invisible':['|',('granulation', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                <field name='powder_granulation_id' attrs="{'invisible':['|',('granulation', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                
                <separator string ='Semi Drying' attrs="{'invisible':['|',('semi_drying', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                <field name='powder_semi_drying_id' attrs="{'invisible':['|',('semi_drying', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                
                <separator string =' Final Drying'  attrs="{'invisible':['|',('final_drying', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                <field name='powder_final_drying_id'  attrs="{'invisible':['|',('final_drying', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                
                <separator string ='Milling' attrs="{'invisible':['|',('milling', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                <field name='powder_milling_id' attrs="{'invisible':['|',('milling', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                    <group class="oe_subtotal_footer oe_right">
                        <field name ="total_weight_before_mi" attrs="{'invisible':['|',('milling', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                        <field name ="total_weight_after_mi" attrs="{'invisible':['|',('milling', '=', 'no'),('formulation_type', '=', 'lotion')]}" />
                    </group>
                    
                <separator string ='Other Ingredient/API addition' attrs="{'invisible':['|',('api_addition', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                <field name='powder_api_addition_id' attrs="{'invisible':['|',('api_addition', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                
                <separator string ='Blending' attrs="{'invisible':['|',('blending', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                <field name='powder_blending_id' attrs="{'invisible':['|',('blending', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                <group class="oe_subtotal_footer oe_right">
                        <!--<field name ="total_input_qty_b" attrs="{'invisible':['|',('blending', '=', 'no')]}"/>
                        <field name ="total_output_qty_b" attrs="{'invisible':['|',('blending', '=', 'no')]}"/>-->
                </group>
            
            
                <separator string ='Compression\Capsule Filling' attrs="{'invisible':['|',('compression', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                <field name='powder_compression_id' attrs="{'invisible':['|',('compression', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                
                <separator string ='Preparation Of Coating Solution ' attrs="{'invisible':['|',('tablet_coating', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                <field name='powder_coating_preparation_id' attrs="{'invisible':['|',('tablet_coating', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                  <group class="oe_subtotal_footer oe_right">
                        <field name ="total_input_qty_pc" attrs="{'invisible':['|',('tablet_coating', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                        <field name ="total_output_qty_pc" attrs="{'invisible':['|',('tablet_coating', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                </group>
                
                <separator string ='Coating' attrs="{'invisible':['|',('coating', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                <field name='powder_coating_id' attrs="{'invisible':['|',('coating', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                  <group class="oe_subtotal_footer oe_right">
                        <field name ="total_input_qty_c" attrs="{'invisible':['|',('coating', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                        <field name ="total_output_qty_c" attrs="{'invisible':['|',('coating', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                 </group>
                
                <separator string ='Inspection Details' attrs="{'invisible':['|',('inspection', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                <field name='powder_inspection_id' attrs="{'invisible':['|',('inspection', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                
                <separator string ='Metal Detection' attrs="{'invisible':['|',('metal_inspection', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                <field name='powder_metal_inspection_id' attrs="{'invisible':['|',('metal_inspection', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                
                <separator string ='Addition Of Ingredients' attrs="{'invisible':[('formulation_type', '=', 'lotion')]}"/>
                    <field name='addition_of_ingredients_line' attrs="{'invisible':[('formulation_type', '=', 'lotion')]}"/> 
                    <group class="oe_subtotal_footer oe_right">
<!--                         <field name ="total_qty_c" attrs="{'invisible':['|',('addition_of_ingredients', '=', 'no')]}"/> -->
                    </group>
                    

                <separator string ='Packing' attrs="{'invisible':['|',('packing', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                <field name='powder_packing_id' attrs="{'invisible':['|',('packing', '=', 'no'),('formulation_type', '=', 'lotion')]}"/>
                
                <separator string ='Break Down' attrs="{'invisible':[('formulation_type', '=', 'lotion')]}"/>
                <field name='breakdown_production_id' attrs="{'invisible':[('formulation_type', '=', 'lotion')]}"/>
                
                <separator string ='Extract  Solution' attrs="{'invisible':['|',('extract_solution_lotion', '=', 'no'),('formulation_type', '=', 'powder')]}"/>
                <field name='extract_solution_line' attrs="{'invisible':['|',('extract_solution_lotion', '=', 'no'),('formulation_type', '=', 'powder')]}"/>
                
                <separator string ='Addition Of Solution' attrs="{'invisible':['|',('addition_of_solution', '=', 'no'),('formulation_type', '=', 'powder')]}"/>
                <field name='addition_of_solution_line' attrs="{'invisible':['|',('addition_of_solution', '=', 'no'),('formulation_type', '=', 'powder')]}"/>
                
                <separator string ='Other Ingredient Addition' attrs="{'invisible':['|',('other_ingredient_addition_lotion', '=', 'no'),('formulation_type', '=', 'powder')]}"/>
                <field name='other_ingredient_addition_line' attrs="{'invisible':['|',('other_ingredient_addition_lotion', '=', 'no'),('formulation_type', '=', 'powder')]}"/>
                
                <separator string ='Volume Make Up' attrs="{'invisible':['|',('volume_make_up', '=', 'no'),('formulation_type', '=', 'powder')]}"/>
                <field name='volume_make_up_line' attrs="{'invisible':['|',('volume_make_up', '=', 'no'),('formulation_type', '=', 'powder')]}"/>
                
                <separator string ='Filling' attrs="{'invisible':['|',('filling_lotion', '=', 'no'),('formulation_type', '=', 'powder')]}"/>
                <field name='filling_line' attrs="{'invisible':['|',('filling_lotion', '=', 'no'),('formulation_type', '=', 'powder')]}"/>
                
                <separator string ='Remarks'/>
                <field name='remarks'/>
                    
                    
                <button name="action_list_products"  string="List" type="object" attrs="{'invisible':[('flag_display_product','=',1),('flag_delete_product','=',0)]}"/>
                <button name="action_delete_products"  string="Delete" type="object" attrs="{'invisible':[('flag_delete_product','=',1),('flag_display_product','=',0)]}"/>
                <separator string ='Output Details'/>
                    <field name='assay_line' />
                    
                <group colspan="4" col="4">
                    <button name="revise_powder" string="Is Revision Required ?" type="object" class="oe_highlight" attrs="{'invisible':['|',('status', '!=', 'batch_alloted'),('revise_status', 'in', ('revise_powder'))]}"/>                                         
                    <button name="revise_done" string="Revise Done" type="object" class="oe_highlight" attrs="{'invisible':[('revise_status', 'not in', ('revise_powder'))]}"/>
                    <group colspan="4" col="4">
                        <field name ="revise_remarks" placeholder='Enter Revise Remarks Here...' attrs="{'invisible': [('is_revise', '=', False)]}"/>
                        <field name ="revise_id" options="{'no_create': True, 'no_open': True, 'no_create_edit' : True}" attrs="{'invisible': [('is_revise', '=', False)]}"/>
                        <field name ="is_revise" attrs="{'invisible':[('is_revise', '=', False)]}"/>
                        <field name ="revise_no" attrs="{'invisible':[('is_revise', '=', False)]}"/>
                        <field name ="revise_remarks_update" />
                        <field name ="revise_flag" invisible="True"/>
                    </group>
                </group>
            </form>
        </field>
    </record>
    
    
    <!-- Tree VIEW TABLET PRODUCTION -->
